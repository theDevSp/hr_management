<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_augmentation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <t t-set="documents_title" t-value="'DÉCISION D\'AUGMENTATION DE SALAIRE'"/>
                    <div class="page pg_recrut">
                        <div class="row cards_aug">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <div class="card border-dark mb-3 bg-light job-card-fixed cadres" style="border-radius: 10px;">
                                    <div class="card-header text-center">
                                        <h5>Informations sur Salarié</h5>
                                    </div>
                                    <div class="card-body text-dark">
                                        <center>
                                            <table>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Nom et Prénom</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.employee_id.name"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>C.I.N N°</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.employee_id.cin"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Fonction</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.employee_id.job_id.name"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Date d'embauche</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.employee_id.date_start"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Chantier Actuel</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.chantier_id.name"/></td>
                                                </tr>
                                            </table>
                                        </center>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>
                        <div class="row cards_aug">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <div class="card border-dark mb-3 bg-light job-card-fixed cadres" style="border-radius: 10px;">
                                    <div class="card-header text-center">
                                        <h5>Informations sur augmentation</h5>
                                    </div>
                                    <div class="card-body text-dark">
                                        <center>
                                            <table>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Dernière augmentation</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-out="doc.derniere_augmentation()"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Motif d'augmentation</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <t t-if="doc.motif == 'renouvlement'">
                                                        <td class="text-left" width="52%"><span>Renouvelement du contrat</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'chang_fonction'">
                                                        <td class="text-left" width="52%"><span>Changement de la fonction</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'anciennete'">
                                                        <td class="text-left" width="52%"><span>Ancienneté</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'rendement'">
                                                        <td class="text-left" width="52%"><span>Rendement</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'competence'">
                                                        <td class="text-left" width="52%"><span>Compétence</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'chang_qualif'">
                                                        <td class="text-left" width="52%"><span>Changement de qualification</span></td>
                                                    </t>
                                                    <t t-elif="doc.motif == 'autres'">
                                                        <td class="text-left" width="52%"><span t-field="doc.motif_autres"/></td>
                                                    </t>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Ancien salaire</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-out="doc.employee_id.salaire_actuel"/> DH</td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Salaire proposé</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-out="doc.montant_propose+doc.employee_id.salaire_actuel"/> DH</td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Salaire validé En Chiffres</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-out="doc.montant_valide+doc.employee_id.salaire_actuel"/> DH</td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Salaire validé En Lettres</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-out="doc.salaire_en_lettres()"/></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left" width="40%"><strong>Période d'effet d'augmentation</strong></td>
                                                    <td width="8%" class="text-center"> : </td>
                                                    <td class="text-left" width="52%"><span t-field="doc.period_id.code"/></td>
                                                </tr>
                                            </table>
                                        </center>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>
                    </div>
                    <t t-call="reports_templates.common_footer">
                        <t t-call="reports_templates.bc_rh_signature"/>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
