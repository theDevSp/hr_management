    </template>



    <template id="fiche_demande_recruit">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'create_uid.lang', 'hr_management.report_recrutement')"/>
            </t>
        </t>
    </template>

</odoo>
