<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_recrutement">
        <div class="header">
			<div class="row">				
				<img src="http://localhost:3389/internal_purchase_requisition/static/src/img/header_logo.png" style="max-width: 100%;"/>				
			</div>
		</div>

        <div class="page">
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading text-center">
							<h4 class="text-center"><strong> DEMANDE DE RECRUTEMENT <span t-field="o.chantier_id"/> </strong></h4>
							<!--<p>LE <span t-field="o.date"/></p>-->
						</div>
						<div class="panel-body text-center">
							<table width="100%"  class="stc_table" style="border-collapse:separate;border-spacing:0 5px;">
								<tbody>
									<tr>
										<td class="text-right" width="49%"><strong>Chantier :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.chantier_id.name"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Responsable :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.responsable_id.name"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Titre du poste :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.title_poste"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Observation :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.observation"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Nombre d'effectif demand&#233; :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.nbr_effectif_demande"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Nombre d'effectif accept&#233; :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.nbr_effectif_accepte"/> </td>
									</tr>
									<tr>
										<td class="text-right" width="49%"><strong>Status :</strong></td>
										<td width="2%"></td>
										<td class="text-left" width="49%"><span t-field="o.state"/> </td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="panel panel-default" t-if="o.compute_readonly_eff_accepte">
						<div class="panel-heading text-center">

							<h6 class="text-center"><strong>OBSERVATION</strong></h6>

						</div>
						<div class="pnael-body text-center">
							<h5 class="text-center"><strong><span t-field="o.compute_readonly_eff_accepte"/></strong></h5>
						</div>
					</div>
				</div>
				<div class="col-md-4"></div>
			</div>
			<table width="100%">
				<tr>
					<td width="9%">
						
					</td>
					<td width="40%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">SALAIRE PROPOSE</div>
							<div class="panel-body text-center">
								<div style="height:50px;">
									<h4><span  t-esc="'{0:,.2f}'.format(o.state)" /> (DH)</h4>
									<strong><span  t-esc="o.state" /></strong>
								</div>
							</div>
						</div>
					</td>
					<td width="2%">
						
					</td>
					<td width="40%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">SALAIRE VALIDE</div>
							<div class="panel-body text-center">
								<div t-if="o.observation" style="height:50px;">
									<h4 ><span  t-esc="'{0:,.2f}'.format(o.state)" /> (DH)</h4>
									<strong><span  t-esc="o.state" /></strong>
								</div>
								<div t-if="not o.state" style="height:50px;">
								</div>
							</div>
						</div>
					</td>
					<td width="9%">
						
					</td>
				</tr>
			</table>
			
			<table width="100%">
				<tr>
					<td width="33%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">VISA <br/><strong>SERVICE RH</strong></div>
							<div class="panel-body text-center">
								<div style="height:100px;"></div>
							</div>
						</div>
					</td>
					<td width="33%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">VISA <br/><strong>CONTRÃ–LE DE GESTION</strong></div>
							<div class="panel-body text-center">
								<div style="height:100px;"></div>
							</div>
						</div>
					</td>
					<td width="34%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">Visa <br/><strong>RECRUTEUR</strong></div>
							<div class="panel-body text-center">
								<div style="height:100px;">

								</div>
							</div>
						</div>
					</td>


				</tr>
			</table>
			<table width="100%">
				<tr>
					<td width="45%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">Directeur Administratif<br/> <strong>M. SEDDAS KHALID</strong></div>
							<div class="panel-body text-center">
								<div style="height:100px;"></div>
							</div>
						</div>
					</td>
					<td width="10%">
						
					</td>
					<td width="45%">
						<div class="panel panel-default">
							<div class="panel-heading text-center">VISA <br/><strong>M. LE PDG</strong></div>
							<div class="panel-body text-center">
								<div style="height:100px;"></div>
							</div>
						</div>
					</td>
					
					

				</tr>
			</table>

		</div>
        
