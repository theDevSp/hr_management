<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='stc_action' model='ir.actions.act_window'>
        <field name="name">STC</field>
        <field name="res_model">hr.stc</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="stc_tree" model="ir.ui.view">
        <field name="name">STC</field>
        <field name="model">hr.stc</field>
        <field name="arch" type="xml">
            <tree string="STC" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="cin"/>
                <field name="job"/>
                <field name="job_id"/>
                <field name="chantier"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="montant_total"/>
                <field name="motif"/>
                <field name="note"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'annulee'" decoration-success="state == 'validee'"/>
            </tree>
        </field>
    </record>

    <record id="view_stc_form" model="ir.ui.view">
        <field name="name">STC Form</field>
        <field name="model">hr.stc</field>
        <field name="arch" type="xml">
            <form string="stc">
                <header>
                    <button name="action_done" states="valide" string="Términer" type="object" class="oe_highlight" />
                    <!-- <button name="compute_stc" states="valide" string="Lancer le calcul" type="object"/> -->
                    <button name="action_valide" states="draft" string="Valider" type="object" class="oe_highlight" />
                    <button name="action_cancel" states="done,valide" string="Annuler" type="object" class="oe_highlight" />
                    <button name="action_draft" states="cancel" string="Mettre en brouillon" type="object" class="oe_highlight" />
                    <!-- <button name="print_stc" states="valide,done" string="Imprimer" type="object" class="oe_highlight"/> -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card border-dark mb-3 bg-info">
                                <div class="card-header text-center">
                                    <h5>Référence STC</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h2>
                                        <field name="name" required="1"/>
                                    </h2>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-success">
                                <div class="card-header text-center">
                                    <h5>Montant Total (DH)</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h1><field name="montant_total"/></h1>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-success">
                                <div class="card-header text-center">
                                    <h5>Montant Validé (DH)</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h1><field name="valide_salaire"/></h1>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-warning">
                                <div class="card-header text-center">
                                    <h5>Reste Emprunts (DH)</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h1><field name="emprunt"/></h1>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-warning">
                                <div class="card-header text-center">
                                    <h5>Reste du salaire (DH)</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h1><field name="reste_salaire"/></h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="card border-dark mb-3">
                                <div class="card-header">Informations sur l'employé</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="employee_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-user form-control-icon"></span>
                                                    <field name="employee_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="cin" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-id-card form-control-icon"></span>
                                                    <field name="cin" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="employee_type" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-user form-control-icon"></span>
                                                    <field name="employee_type" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="job_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-briefcase form-control-icon"></span>
                                                    <field name="job_id" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div> 
                                        <div class="col-md-4">
                                            <label for="contract" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-file-contract form-control-icon"></span>
                                                    <field name="contract" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="job" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-briefcase form-control-icon"></span>
                                                    <field name="job" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="profile_paie" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-barcode form-control-icon"></span>
                                                    <field name="profile_paie" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div> 
                                        <div class="col-md-4">
                                            <label for="date_debut" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_debut" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="date_fin" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_fin" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="chantier" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div> 
                                        <div class="col-md-3">
                                            <label for="bank" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="bank" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div> 
                                        <div class="col-md-3">
                                            <label for="modePay" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="modePay" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="ordre" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="ordre" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Informations STC</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="date_start" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_start" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="salaire" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="salaire" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="last_period_days" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="last_period_days" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="motif" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-align-justify form-control-icon"></span>
                                                    <field name="motif" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="note" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-comment form-control-icon"></span>
                                                    <field name="note" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Jours congés et dimanches</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="jr_conge" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="jr_conge" class="form-control" style="max-width:40%;"/>
                                                    <span> = </span>

                                                    <field name="jr_conge_m" class="form-control" style="max-width:40%;"/>
                                                    <span> (DH) </span>
                                                </div>  
                                            </div>
                                        </div>                                    
                                        <div class="col-md-4">
                                            <label for="nombre_dimanche_a_payer" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nombre_dimanche_a_payer" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="jr_dim" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="jr_dim" class="form-control" style="max-width:40%;"/>
                                                    <span> = </span>

                                                    <field name="montant_dim" class="form-control" style="max-width:40%;"/>
                                                    <span> (DH) </span>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Frais et dépenses</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="frais_depense" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="frais_depense" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>                                    
                                        <div class="col-md-4">
                                            <label for="frais_route" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="frais_route" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="jr_block" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="jr_block" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Préavis</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="preavis_retenu" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <!-- <span class="fas fa-money-bill-wave form-control-icon"></span> -->
                                                    <field name="preavis_retenu" class="form-control" style="max-width:30%;"/>
                                                    =
                                                    <field name="preavis_retenu_m" class="form-control" style="max-width:30%;"/>
                                                    (DH)
                                                </div>    
                                            </div>
                                        </div>                                    
                                        <div class="col-md-6">
                                            <label for="preavis_ajouter" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <!-- <span class="fas fa-money-bill-wave form-control-icon"></span> -->
                                                    <field name="preavis_ajouter" class="form-control" style="max-width:30%;"/>
                                                    =
                                                    <field name="preavis_ajouter_m" class="form-control" style="max-width:30%;"/>
                                                    (DH)
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Prime et licenciement</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="prime" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="prime" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>                                    
                                        <div class="col-md-4">
                                            <label for="licenciement" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="licenciement" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="dgi" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="dgi" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Amende et Retenus</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="amande" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="amande" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>                                    
                                        <div class="col-md-4">
                                            <label for="retenu" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="retenu" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="cimr" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="cimr" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card border-dark mb-3">
                                <div class="card-header">Liste des emprunts</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="emprunt_lines" nolabel="1">
                                                        <tree>
                                                            <field name="emprunt_id" />
                                                            <!-- <field name="emprunt_montant" /> -->
                                                            <!-- <field name="emprunt_balance" /> -->
                                                            <field name="add" />
                                                            <field name="montant_payer" />
                                                            <!-- <field name="note" /> -->
                                                        </tree>
                                                    </field>
                                                </div>    
                                            </div>
                                        </div>                                    
                                    </div>
                                </div>
                            </div>
                            <div class="card border-dark mb-3">
                                <div class="card-header">Reste Salaire</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="payslip_lines" nolabel="1">
                                                        <tree>
                                                            <field name="payslip_id" />
                                                            <field name="period_id" />
                                                            <field name="net_pay" />
                                                            <field name="chantier_id"/>
                                                            <field name="emplacement_chantier_id" />
                                                            <!-- <field name="vehicle_id" /> -->
                                                        </tree>
                                                    </field>
                                                </div>    
                                            </div>
                                        </div>                                    
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stc_search" model="ir.ui.view">
        <field name="name">Recherche - STC</field>
        <field name="model">hr.stc</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="cin"/>
                <field name="chantier"/>
                <!-- <searchpanel>
                    <field name="motif" icon="fa-comment" enable_counters="1"/>
                    <field name="state" icon="fa-align-center" enable_counters="1"/>
                </searchpanel> -->
            </search>
        </field>
    </record>
</odoo>