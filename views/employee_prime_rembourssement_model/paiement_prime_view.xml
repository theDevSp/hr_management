<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='paiement_prime_action' model='ir.actions.act_window'>
        <field name="name">Les Paiements des Primes</field>
        <field name="res_model">hr.paiement.prime</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="paiement_prime_tree_view" model="ir.ui.view">
        <field name="name">Les Paiements des Primes</field>
        <field name="model">hr.paiement.prime</field>
        <field name="arch" type="xml">
            <tree string="Les paiements des primes" multi_edit="1" sample="1" class="table">
                <field name="period_id"/>
                <field name="prime_id"/>
                <field name="montant_a_payer"/>
                <field name="state" widget="badge" decoration-danger="state == 'non_paye'" decoration-success="state == 'paye'"/>
            </tree>
        </field>
    </record>

    <record id="paiement_prime_view_form" model="ir.ui.view">
        <field name="name">Form Paiements des Primes</field>
        <field name="model">hr.paiement.prime</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">
                    <button name="changer_status" string="Changer l'Ã©tat" type="object" class="oe_highlight"/>
                    <button name="to_annuler" string="Annuler" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('annule'))]}"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <center>
                        <div class="card border-dark mb-3 bg-light" style="max-width: 30em;text-align:left;">
                            <div class="card-body text-dark">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="period_id" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-clock form-control-icon"></span>
                                                <field name="period_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="prime_id" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fa fa-plus form-control-icon"></span>
                                                <field name="prime_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="montant_a_payer" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                <field name="montant_a_payer" class="form-control"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </center>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="paiement_prime_search" model="ir.ui.view">
        <field name="name">Recherche des Paiements Primes</field>
        <field name="model">hr.paiement.prime</field>
        <field name="arch" type="xml">
            <search>
                <field name="period_id"/>
                <field name="state"/>
            </search>
        </field>
    </record>
</odoo>