<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='allocations_action' model='ir.actions.act_window'>
        <field name="name">Allocations</field>
        <field name="res_model">hr.allocations</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="allocations_tree" model="ir.ui.view">
        <field name="name">Les allocations</field>
        <field name="model">hr.allocations</field>
        <field name="arch" type="xml">
            <tree string="Allocations" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="categorie"/>
                <field name="nbr_jour"/>
                <field name="state" widget="badge" decoration-info="state == 'approuvee'" decoration-warning="state == 'refusee'"/>
            </tree>
        </field>
    </record>
    <record id="allocations_formulaire" model="ir.ui.view">
        <field name="name">Formulaire des allocations</field>
        <field name="model">hr.allocations</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">
                    <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_approuvee" string="Approuver" type="object" attrs="{'invisible': [('state', 'in', ('approuvee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_refusee" string="Refuser" type="object" attrs="{'invisible': [('state', 'in', ('refusee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <div class="row mt-3">
                        <div class="col-md-1"></div>
                        <div class="col-md-4">
                            <div class="card-deck">
                                <div class="card">
                                    <center>
                                        <div class="card border-dark mb-3 bg-info mt-4">
                                            <div class="card-header text-center">
                                                <h5>Employ√©</h5>
                                            </div>
                                            <div class="card-body text-dark text-center">
                                                <h3>
                                                    <field name="employee_id" class="card-img-top mt-3 mb-2" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </h3>
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="card border-dark mb-3 bg-light" style="max-width: 30em;text-align:left;">
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="name" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="name" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="categorie" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-plus form-control-icon"></span>
                                                    <field name="categorie" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="nbr_jour" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="nbr_jour" class="form-control" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="stc_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-handshake-o form-control-icon"></span>
                                                    <field name="stc_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="allocations_search" model="ir.ui.view">
        <field name="name">Recherche - Allocations</field>
        <field name="model">hr.allocations</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <searchpanel>
                    <field name="categorie" icon="fa-comment" enable_counters="1" select="multi"/>
                    <field name="state" icon="fa-align-center" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>