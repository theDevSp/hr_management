<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='holidays_action' model='ir.actions.act_window'>
        <field name="name">Congés</field>
        <field name="res_model">hr.holidays</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="holidays_tree" model="ir.ui.view">
        <field name="name">Les congés</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <!-- <tree string="Congés" multi_edit="1" sample="1" default_order='date_fait ASC' class="table"> -->
            <tree string="Congés" multi_edit="1" sample="1" class="table">
                <field name="employee_id" readonly="1" widget="many2one_avatar_employee"/>
                <field name="chantier_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'annulee'" decoration-success="state == 'validee'"/>
                <field name="motif"/>
            </tree>
        </field>
    </record>
    <record id="holidays_formulaire" model="ir.ui.view">
        <field name="name">Formulaire des Congés</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">
                    <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft','validee','approuvee','refusee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_validee" string="Valider" type="object" attrs="{'invisible': [('state', 'in', ('validee','approuvee','refusee','annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_approuvee" string="Approuver" type="object" attrs="{'invisible': [('state', 'in', ('draft','approuvee','annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_refusee" string="Refuser" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'refusee', 'annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_annulee" string="Annuler" type="object" attrs="{'invisible': [('state', 'in', ('annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <div class="row mt-3">
                        <div class="col-md-4 col-lg-4">
                            <div class="card-deck">
                                <div class="card">
                                    <center>
                                        <div class="card border-dark mb-3 bg-info mt-4">
                                            <div class="card-header text-center">
                                                <h5>Employé</h5>
                                            </div>
                                            <div class="card-body text-dark text-center">
                                                <h3>
                                                    <field name="employee_id" class="card-img-top mt-3 mb-2" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="card border-dark mb-3 bg-success mt-4">
                                            <div class="card-header text-center">
                                                <h5>Remplaçant</h5>
                                            </div>
                                            <div class="card-body text-dark text-center">
                                                <h3>
                                                    <field name="remplacant_employee_id" class="card-img-top mt-3 mb-2" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </h3>
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8" attrs="{'readonly':[('state','!=','draft')]}">
                            <div class="card border-dark mb-3 bg-light">
                                <div class="card-body text-dark mt-3">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label for="demi_jour" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="demi_jour" widget="boolean_toggle" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div> 
                                        </div>
                                         <div class="col-md-4">
                                            <label for="heure_perso" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="heure_perso" widget="boolean_toggle" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div> 
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chantier_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-building form-control-icon"></span>
                                                    <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" attrs="{'invisible':['|',('demi_jour','=',True),('heure_perso','=',True)]}">
                                        <div class="col-md-3">
                                            <label for="date_start" string="Du"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_start" class="form-control" nolabel="1" widget="daterange" options="{'related_end_date': 'date_end'}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="date_start" string="Au"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_end" class="form-control" widget="daterange" options="{'related_start_date': 'date_start'}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('demi_jour','!=',True)]}">
                                        <div class="col-md-5">
                                            <label for="date_start" string="Date"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <div class="">
                                                        <span class="fas fa-calendar form-control-icon"></span><field name="date_select_half_perso" class="form-control" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-3">
                                            <label for="matin_soir" string="Matinée/Soirée"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <div class="">
                                                        <span class="fas fa-clock form-control-icon"></span><field name="matin_soir" class="form-control" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('heure_perso','!=',True)]}">
                                        <div class="col-md-5">
                                            <label for="date_start" string="Date"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <div class="">
                                                        <span class="fas fa-calendar form-control-icon"></span><field name="date_select_half_perso" class="form-control" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-3">
                                            <label for="date_start" string="Du"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span><field name="heure_start" class="form-control" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="date_start" string="Au"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span><field name="heure_end" class="form-control" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" attrs="{'invisible':['|',('demi_jour','=',True),('heure_perso','=',True)]}">
                                        <div class="col-md-6">
                                            <label for="duree_jours" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="duree_jours" class="form-control" style="max-width: 50%;" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                    <span><b> Jour(s) (x 8 Heures)</b></span>
                                                </div>  
                                            </div> 
                                        </div>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('demi_jour','!=',True),('heure_perso','!=',True)]}">
                                        <div class="col-md-6">
                                            <label for="duree_heures" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="duree_heures" class="form-control" style="max-width: 50%;" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                    <span><b> Heure(s)</b></span>
                                                </div>  
                                            </div> 
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="motif" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-align-justify form-control-icon"></span>
                                                    <field name="motif" class="form-control" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="description" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-comment form-control-icon"></span>
                                                    <field name="description" class="form-control" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                </div>  
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="holidays_search" model="ir.ui.view">
        <field name="name">Recherche - Congés</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="chantier_id"/>
                <searchpanel>
                    <field name="motif" icon="fa-city" enable_counters="1"/>
                    <field name="state" icon="fa-align-center" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>