<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='pointage_s_action' model='ir.actions.act_window'>
        <field name="name"> Rapport de pointage </field>
        <field name="res_model">hr.rapport.pointage</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[('type_emp', '=', 's')]</field>
        <field name="context">{
            "search_default_group_by_public_market_id":1,
            "search_default_group_by_period_id":1,
            "search_default_group_by_emplacement_chantier_id":1,
            "search_default_group_by_quinzaine":1
            }</field>
    </record>

    <record id='pointage_o_action' model='ir.actions.act_window'>
        <field name="name"> Rapport de pointage </field>
        <field name="res_model">hr.rapport.pointage</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[('type_emp', '=', 'o')]</field>
        <field name="context">{
            "search_default_group_by_public_market_id":1,
            "search_default_group_by_period_id":1,
            "search_default_group_by_emplacement_chantier_id":1,
            "search_default_group_by_quinzaine":1
            }</field>
    </record>

    <record id='pointage_cadre_action' model='ir.actions.act_window'>
        <field name="name"> Rapport de pointage </field>
        <field name="res_model">hr.rapport.pointage</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[('type_emp', '=', 'c')]</field>
        <field name="context">{
            "search_default_group_by_public_market_id":1,
            "search_default_group_by_period_id":1,
            "search_default_group_by_emplacement_chantier_id":1,
            "search_default_group_by_quinzaine":1
            }</field>
    </record>

    <record id='pointage_siege_action' model='ir.actions.act_window'>
        <field name="name"> Rapport de pointage </field>
        <field name="res_model">hr.rapport.pointage</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[('type_emp', '=', 'a')]</field>
        <field name="context">{
            "search_default_group_by_public_market_id":1,
            "search_default_group_by_period_id":1,
            "search_default_group_by_emplacement_chantier_id":1,
            "search_default_group_by_quinzaine":1
            }</field>
    </record>

    <record id='transfert_action' model='ir.actions.act_window'>
        <field name="name"> Transfert Employés Entre Chantiers </field>
        <field name="res_model">hr.employee.transfert</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="mass_create_creation_action" model="ir.actions.act_window">
        <field name="name">Création rapport du mois</field>
        <field name="res_model">hr.filtre.pointage.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="creation_mass_repport_wizard" />
        <field name="target">new</field>
    </record>

    <record id="mass_payement_creation_action" model="ir.actions.act_window">
        <field name="name">Paiement du mois</field>
        <field name="res_model">hr.filtre.pointage.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payement_mass_wizard" />
        <field name="target">new</field>
    </record>

    <record id="view_bce_filter" model="ir.ui.view">
        <field name="name">hr.rapport.pointage.select</field>
        <field name="model">hr.rapport.pointage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="employee_id" />
                <field name="chantier_id" />
                <!-- <field name="vehicle_id" /> -->
                <field name="emplacement_chantier_id" />
                <field name="rapport_lines" string="Code Engin" filter_domain="[('rapport_lines.vehicle_ids.name','ilike',self)]" />
                <group expand="0" string="Group By">
                    <filter name="group_by_public_market_id" string="Chantier" context="{'group_by':'chantier_id'}" />
                    <filter name="group_by_period_id" string="Période" context="{'group_by':'period_id'}" />
                    <filter name="group_by_public_market_name" string="Employée" context="{'group_by':'employee_id'}" />
                    <filter name="group_by_emplacement_chantier_id" string="Equipe" context="{'group_by':'emplacement_chantier_id'}" />
                    <filter name="group_by_quinzaine" string="Quinzaine" context="{'group_by':'quinzaine'}" />
                    <filter name="group_by_state" string="Statut" context="{'group_by':'state'}" />
                </group>
            </search>
        </field>
    </record>


    <menuitem name="Pointage" id="pointage_menu" parent="hr_management_base_menu" action="" sequence="10" />
    <menuitem name="Rapport Pointage" id="rapport_pointage_main_menu" parent="pointage_menu" sequence="1" />
    <menuitem name="Rapport (Cadre)" id="rapport_pointage_cadre" parent="rapport_pointage_main_menu" groups="hr_management.group_admin_view_paie,hr_management.group_agent_paie_cadre,hr_management.group_pointeur" action="pointage_cadre_action" sequence="1" />
    <menuitem name="Rapport (Siége)" id="rapport_pointage_administration" parent="rapport_pointage_main_menu" groups="hr_management.group_admin_view_paie,hr_management.group_agent_paie_administration" action="pointage_siege_action" sequence="2" />
    <menuitem name="Rapport (Salariés)" id="rapport_pointage_menu_s" parent="rapport_pointage_main_menu" groups="hr_management.group_admin_paie,hr_management.group_admin_view_paie,hr_management.group_agent_paie,hr_management.group_pointeur" action="pointage_s_action" sequence="3" />
    <menuitem name="Rapport (Ouvriers)" id="rapport_pointage_menu_o" parent="rapport_pointage_main_menu" action="pointage_o_action" groups="hr_management.group_admin_paie,hr_management.group_admin_view_paie,hr_management.group_agent_paie,hr_management.group_pointeur" sequence="4" />
    <menuitem name="Transfert" id="transfert_menu" parent="pointage_menu" action="transfert_action" groups="hr_management.group_admin_paie,hr_management.group_admin_view_paie,hr_management.group_agent_paie,hr_management.group_pointeur" sequence="5" />
    <menuitem name="Création par mass" id="create_mass_menu" parent="pointage_menu" action="mass_create_creation_action" sequence="20" groups="hr_management.group_admin_paie,hr_management.group_pointeur" />

    <menuitem name="Payement par mass" id="payement_mass_menu" parent="fp_recap_parent_menu" action="mass_payement_creation_action" sequence="22" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_agent_paie_administration,hr_management.group_agent_paie_cadre" />

    <record model="ir.actions.server" id="action_update_invoice_date">
        <field name="name">Paiement par masse</field>
        <field name="model_id" ref="hr_management.model_hr_rapport_pointage" />
        <field name="binding_model_id" ref="hr_management.model_hr_rapport_pointage" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.masse_payement()
        </field>
    </record>

    <menuitem name="Création par mass Machine Pointage" id="create_mass_machine_pointage_menu" parent="pointage_menu" action="mass_create_machine_poinatge_creation_action" sequence="30" />

    <record id="mass_create_machine_poinatge_creation_action" model="ir.actions.act_window">
        <field name="name">Création du rapport des salariés avec la machine de pointage.</field>
        <field name="res_model">hr.machine.rapport.mass.pointage.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="creation_mass_rapport_machine_pointage_wizard" />
        <field name="target">new</field>
    </record>

</odoo>