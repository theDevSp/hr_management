<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='typecontrat_action' model='ir.actions.act_window'>
        <field name="name">Type des contrats</field>
        <field name="res_model">hr.contract.type</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="type_of_contrat_tree" model="ir.ui.view">
        <field name="name">Liste des Types Contrats</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <tree class="table">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="contrats_type_view_form" model="ir.ui.view">
        <field name="name">Formulaire des Types Contrats</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <div class="card border-dark mb-3 bg-light" style="max-width: 30em;text-align:left;">
                            <div class="card-body text-dark">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="name" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-align-justify form-control-icon"></span>
                                                <field name="name" class="form-control"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="description" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-comment form-control-icon"></span>
                                                <field name="description" class="form-control"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </center>
                </sheet>
            </form>
        </field>
    </record>

    <record id="contrats_type_search" model="ir.ui.view">
        <field name="name">Recherche des Types Contrats</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>