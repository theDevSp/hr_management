<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='contrats_actifs_action' model='ir.actions.act_window'>
        <field name="name">Contrats Actifs</field>
        <field name="res_model">hr.contract</field>
        <field name="domain">[('state', '=', 'open')]</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="contrats_actifs_tree" model="ir.ui.view">
        <field name="name">Liste des Contrats Actifs</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <tree string="Contrats" multi_edit="1" sample="1" default_order='date_start ASC' class="table">
                <field name="employee_id" readonly="1" widget="many2one_avatar_employee"/>
                <field name="name" readonly="1"/>
                <field name="job_id"/>
                <field name="date_start" readonly="1"/>
                <field name="date_end" readonly="1"/>
                <field name="chantier_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'close'" decoration-success="state == 'open'"/>
                <field name="wage" invisible="1"/>
                <field name="message_needaction" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="contrats_actifs_view_form" model="ir.ui.view">
        <field name="name">Formulaire des Contrats Actifs</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">            
                    <button name="to_new" string="New" type="object" attrs="{'invisible': [('state', 'in', ('draft','close'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_running" string="Running" type="object" attrs="{'invisible': [('state', 'in', ('open','close'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_expired" string="Expired" type="object" attrs="{'invisible': [('state', 'in', ('draft','close','cancel'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_cancelled" string="Cancelled" type="object" attrs="{'invisible': [('state', 'in', ('draft', 'open', 'cancel'))]}" groups ="hr_management.group_admin_paie"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card border-dark mb-3 bg-info">
                                <div class="card-header text-center">
                                    <h5>Référence contrat</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h2>
                                        <field name="name" required="1" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                    </h2>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-success">
                                <div class="card-header text-center">
                                    <h5>Status</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h1><field name="kanban_state" widget="state_selection" attrs="{'readonly': [('state', '=', 'cancel')]}"/></h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="card border-dark mb-3 bg-light">
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="employee_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="employee_id" class="form-control" required="1" options="{'no_create': True, 'no_open': False}" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chantier_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="date_start" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_start" class="form-control" string="Date début du contrat" required="1" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="job_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-briefcase form-control-icon"></span>
                                                    <field name="job_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="date_end" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_end" class="form-control" string="Date fin du contrat" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>      
                                        </div>
                                        <div class="col-md-6">
                                            <label for="contract_type_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-file-contract form-control-icon"></span>
                                                    <field name="contract_type_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>    
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="wage" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="wage" class="form-control" required="1" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>      
                                        </div>
                                        <div class="col-md-6">
                                            <label for="company_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-building form-control-icon"></span>
                                                    <field name="company_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>    
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6" style="height:5em;">
                                            <label for="salaire_actuel" class=""/>
                                            <div class="card text-white bg-dark mb-3">
                                                <div class="card-body">
                                                    <field name="tt_montant_a_ajouter" invisible="1" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                    <h4 class="card-title text-center align-middle"><field name="salaire_actuel" style="height:0.3em;"/> </h4>
                                                </div>
                                            </div>
                                            <div class="alert alert-info text-center" role="alert">
                                                Le salaire actuel représente le salaire de base plus les augmentations liées à cet employé.
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="notes" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-comment form-control-icon"></span>
                                                    <field name="notes" class="form-control"  style="height:4.6em;" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                    <div class="row mt-3"></div>
                                    <div class="row mt-3"></div>
                                    <div class="row mt-3"></div>
                                    <div class="row mt-3"></div>
                                    <div class="row mt-3"></div>  
                                    <hr/>
                                    <div class="row mt-3">
                                        <div class="col-md-8">
                                            <div class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-sliders form-control-icon"></span>
                                                    <field name="profile_paie_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div> 
                                        </div>
                                        <div class="col-md-4">
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="pp_personnel_id_many2one" invisible="1" attrs="{'readonly': [('state', '=', 'cancel')]}"/>
                                                    <button name="generer_profile" type="object" class="btn btn-success" icon="fa-upload" string="Générer Profile" max-width="200" states="draft" attrs="{'invisible': [('pp_personnel_id_many2one', '!=', False )]}"/>
                                                </div>  
                                            </div> 
                                        </div>
                                    </div>




                                    <hr/>
                                    <div class="row mt-2"></div>
                                    <div class="row mt-3">
                                        <div class="col-md-4">
                                            <label for="completer_salaire_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="completer_salaire_related" widget="boolean_toggle" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="plafonner_bonus_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="plafonner_bonus_related" widget="boolean_toggle" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="avoir_conge_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="avoir_conge_related" widget="boolean_toggle" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="type_profile_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-sliders form-control-icon"></span>
                                                    <field name="type_profile_related" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="nbre_jour_worked_par_mois_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="nbre_jour_worked_par_mois_related" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div> 
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="nbre_heure_worked_par_jour_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nbre_heure_worked_par_jour_related" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="nbre_heure_worked_par_demi_jour_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nbre_heure_worked_par_demi_jour_related" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="definition_nbre_jour_worked_par_mois_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="definition_nbre_jour_worked_par_mois_related" class="form-control"/>
                                                    <field name="nbr_saisie_champs_related" class="form-control" attrs="{'invisible': [('definition_nbre_jour_worked_par_mois_related', '!=', 'nbr_saisie')], 'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="period_id_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="period_id_related" widget="many2one_tags" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="salaire_jour_related" class=""/>
                                            <div class="card text-white bg-dark mb-3">
                                                <div class="card-body">
                                                    <h4 class="card-title text-center align-middle">
                                                        <field name="salaire_jour_related"  style="height:0.3em;"/>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="salaire_demi_jour_related" class=""/>
                                            <div class="card text-white bg-dark mb-3">
                                                <div class="card-body">
                                                    <h4 class="card-title text-center align-middle">
                                                        <field name="salaire_demi_jour_related"  style="height:0.3em;"/>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="salaire_heure_related" class=""/>
                                            <div class="card text-white bg-dark mb-3">
                                                <div class="card-body">
                                                    <h4 class="card-title text-center align-middle">
                                                        <field name="salaire_heure_related"  style="height:0.3em;"/>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title pr-0" name="title">
                        <h2>
                            <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                            <field name="active" invisible="1"/>
                        </h2>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="contrats_actifs_search" model="ir.ui.view">
        <field name="name">Recherche des Contrats</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Contract"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="chantier_id"/>
                <field name="resource_calendar_id"/>
                <searchpanel>
                    <field name="chantier_id" icon="fa-city" enable_counters="1"/>
                    <field name="company_id" icon="fa-building" enable_counters="1"/>
                    <field name="contract_type_id" icon="fa-file-contract" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>