<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='postes_action' model='ir.actions.act_window'>
        <field name="name"> HR Management - Postes </field>
        <field name="res_model">hr.job</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="postes_tree" model="ir.ui.view">
        <field name="name"> List of Postes</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <tree class="table">
                <field name="name"/>
                <field name="nbr_effectif_recrutes"/>
                <field name="nbr_effectif_prevu_where_state_encours"/>
                <field name="nbr_employees_active_for_this_job"/>
                <field name="nbr_total_demandes_of_this_job"/>
            </tree>
        </field>
    </record>

    <record id="postes_view_form" model="ir.ui.view">
        <field name="name">Postes Form</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <h1 ><field name="name" style="text-decoration: underline;"/></h1>
                    </center>
                    <br/><br/>
                    <div class="card-deck">
                        <div class="card border-dark mb-3 bg-info">
                            <div class="card-body">
                                <div class="card-header"><h5>Total des demandes sur ce poste</h5></div>
                                <div class="card-body text-dark">
                                    <center><h1><field name="nbr_total_demandes_of_this_job" nolabel="1"/></h1></center>
                                </div>
                                <div class="card-footer">
                                    
                                    <ul class="list-group">
                                        <li class="list-group-item active">Statistiques :</li>
                                        <li class="list-group-item">
                                            <p>En Brouillon :<h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_draft" style="vertical-align:middle;" nolabel="1"/></span></h3></p>
                                        </li>
                                        <li class="list-group-item">
                                            <p>Validées :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_validee" style="vertical-align:middle;" nolabel="1"/></span></h3>
                                        </li>
                                        <li class="list-group-item">
                                            <p>En Cours :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_en_cours" nolabel="1"/></span></h3>
                                        </li>
                                        <li class="list-group-item">
                                            <p>Acceptées :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_acceptee" nolabel="1"/></span></h3>
                                        </li>
                                        <li class="list-group-item">
                                            <p>Refusées :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_refusee" nolabel="1"/></span></h3>
                                        </li>
                                        <li class="list-group-item">
                                            <p>Annulées :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_annulee" nolabel="1"/></span></h3>
                                        </li>
                                        <li class="list-group-item">
                                            <p>Terminées :</p><h3><span class="badge badge-primary" style="float:right;"><field name="nbr_demandes_terminee" nolabel="1"/></span></h3>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card border-dark mb-3 bg-success" style="max-height: 14rem;">
                            <div class="card-body">
                                <div class="card-header"><h5>Nombre d'effectif recrutés</h5></div>
                                <div class="card-body text-dark">
                                    <center><h1><field name="nbr_effectif_recrutes" nolabel="1"/></h1></center>
                                </div>
                            </div>
                        </div>
                        <div class="card border-dark mb-3 bg-danger" style="max-height: 14rem;">
                            <div class="card-body">
                                <div class="card-header"><h5>Nombre d'effectif prévus</h5></div>
                                <div class="card-body text-dark">
                                    <center><h1><field name="nbr_effectif_prevu_where_state_encours" nolabel="1"/></h1></center>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="postes_search" model="ir.ui.view">
        <field name="name">Postes Recherche</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>