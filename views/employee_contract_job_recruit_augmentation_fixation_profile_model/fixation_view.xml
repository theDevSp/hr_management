<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='fixation_salaire_action' model='ir.actions.act_window'>
        <field name="name">Fixation de salaire</field>
        <field name="res_model">hr.fixation.salaire</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="fixation_salaire_tree" model="ir.ui.view">
        <field name="name">Fixation de salaire - Tree</field>
        <field name="model">hr.fixation.salaire</field>
        <field name="arch" type="xml">
            <tree string="Fixation de salaire" multi_edit="1" sample="1" default_order='period_id ASC' class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="cin"/>
                <field name="cnss"/>
                <field name="fonction"/>
                <field name="profile"/>
                <field name="date_embauche"/>
                <field name="chantier_id"/>
                <field name="embaucher_par"/>
                <field name="recommander_par"/>
                <field name="offered_wage"/>
                <field name="officiel_wage"/>
                <field name="state"/>
                <field name="period_id"/>
                <field name="date"/>
                <field name="obs"/>
            </tree>
        </field>
    </record>

    <record id="fixation_salaire_form" model="ir.ui.view">
        <field name="name">Fixation de salaire - Form</field>
        <field name="model">hr.fixation.salaire</field>
        <field name="arch" type="xml">
        <form>
                <header class="bar-box-shadow mb-4">
                    <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_validee" string="Valider" type="object" attrs="{'invisible': [('state', 'in', ('valide', 'cancel'))]}" groups ="hr_management.group_admin_paie,hr_management.group_agent_paie"/>
                    <button name="to_annulee" string="Annuler" type="object" attrs="{'invisible': [('state', 'in', ('cancel'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card border-dark mb-3 bg-info">
                                <div class="card-header text-center">
                                    <h5>Référence</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h3>
                                        <field name="name"/>
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-9">
                            <div class="card border-dark mb-3 bg-light">
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="employee_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="employee_id" options="{'no_create': True, 'no_open': True}" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="cin" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-id-card form-control-icon"></span>
                                                    <field name="cin" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="cnss" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-id-card form-control-icon"></span>
                                                    <field name="cnss" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="fonction" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-briefcase form-control-icon"></span>
                                                    <field name="fonction" options="{'no_create': True, 'no_open': True}" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="profile" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-sliders form-control-icon"></span>
                                                    <field name="profile" options="{'no_create': True, 'no_open': True}" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="embaucher_par" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="embaucher_par" options="{'no_create': True, 'no_open': True}" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="recommander_par" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="recommander_par" options="{'no_create': True, 'no_open': True}" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="chantier_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier_id" options="{'no_create': True, 'no_open': True}" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="date_embauche" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_embauche" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="offered_wage" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="offered_wage" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="offered_wage_letters" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="offered_wage_letters" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="officiel_wage" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="officiel_wage" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="officiel_wage_letters" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="officiel_wage_letters" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="period_id" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="period_id" options="{'no_create': True, 'no_open': True}" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="date" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="obs" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-comment form-control-icon"></span>
                                                    <field name="obs" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="propose" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="propose" widget="boolean_toggle" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fixation_salaire_search" model="ir.ui.view">
        <field name="name">Fixation de salaire - Recherche</field>
        <field name="model">hr.fixation.salaire</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="cin"/>
                <field name="fonction"/>
                <field name="chantier_id"/>
                <field name="state"/>
                <searchpanel>
                    <field name="period_id" icon="fa-clock" enable_counters="1" select="multi"/>
                    <field name="state" icon="fa-align-center" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>