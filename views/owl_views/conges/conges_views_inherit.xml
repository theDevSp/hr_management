<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="conges_form_view_inherit" model="ir.ui.view">
            <field name="name">conges.form.view.inherit</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_management.holidays_formulaire"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">pdf_one_demande_de_conges</attribute>
                </xpath>
            </field>
        </record>

        <record id="conges_list_view_inherit" model="ir.ui.view">
            <field name="name">conges.list.view.inherit</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_management.holidays_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="js_class">pdf_many_demande_de_conges</attribute>
                </xpath>
            </field>
        </record>

        
    
    </data>
    
</odoo>