<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="affectation_tree" model="ir.ui.view">
        <field name="name">Liste des affectations</field>
        <field name="model">fleet.vehicle.chantier.affectation</field>
        <field name="arch" type="xml">
            <tree string="Liste des affectations" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="vehicle_chantier_id"/>
                <field name="chantier_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="emplacement_source_id"/>
                <field name="emplacement_chantier_id"/>
                <field name="notes"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'annulee'" decoration-success="state == 'validee'"/>
            </tree>
        </field>
    </record>
    <record id="affectation_formulaire" model="ir.ui.view">
        <field name="name">Formulaire des affectations</field>
        <field name="model">fleet.vehicle.chantier.affectation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button name="action_done" states="draft" string="Valider" type='object' class="oe_highlight"/> -->
                    <!-- <button name="action_draft" states="done" string="Corriger" type='object'/> -->
                    <!-- <field name="state" widget="statusbar" statusbar_visible="draft,done"/> -->
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="row mt-3">
                        <div class="col-md-4 col-lg-4">
                            <div class="card-deck">
                                <div class="card">
                                    <center>
                                        <div class="card border-dark mb-3 bg-info mt-4">
                                            <div class="card-header text-center">
                                                <h5>Référence</h5>
                                            </div>
                                            <div class="card-body text-dark text-center">
                                                <h3>
                                                    <field name="name" class="card-img-top mt-3 mb-2"/>
                                                </h3>
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card border-dark mb-3 bg-light">
                                <div class="card-body text-dark mt-3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="vehicle_chantier_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="vehicle_chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chantier_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="date_start"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_start" class="form-control" nolabel="1" widget="daterange" options="{'related_end_date': 'date_end'}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="date_end"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date_end" class="form-control" nolabel="1" widget="daterange" options="{'related_start_date': 'date_start'}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="emplacement_source_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-users form-control-icon"></span>
                                                    <field name="emplacement_source_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="emplacement_chantier_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-users form-control-icon"></span>
                                                    <field name="emplacement_chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="notes"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-comment form-control-icon"></span>
                                                    <field name="notes" class="form-control"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="affectation_search" model="ir.ui.view">
        <field name="name">Recherche - Affectation</field>
        <field name="model">fleet.vehicle.chantier.affectation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vehicle_chantier_id"/>
                <field name="chantier_id"/>
            </search>
        </field>
    </record>
</odoo>