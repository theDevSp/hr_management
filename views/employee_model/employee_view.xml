                                                    <div class="form-group">
                                                        <span class="fas fa-500px form-control-icon"></span>
                                                        <field name="job_id" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6">
                                                <label for="job" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-500px form-control-icon"></span>
                                                        <field name="job" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="chantier_id" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="chantier_id" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="emplacement_chantier_id" class=""/>
