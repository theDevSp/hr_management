<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="employee_tree" model="ir.ui.view">
        <field name="name">HR Employee List</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cin"/>
                <field name="cnss" optional="show"/>
				<field name="job" optional="show"/>
                <field name="type_emp" optional="show"/>
                <field name="chantier_id" optional="show"/>
                <field name="emplacement_chantier_id" optional="show"/>
                <field name="state_employee_wtf" widget="badge" decoration-success="state_employee_wtf == 'new'" decoration-danger="state_employee_wtf == 'stc'" class="table"/>
                <field name="diplome" optional="hide"/>				
				<field name="bank_account" optional="hide"/>
                
                <field name="montant_cimr" optional="hide" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
                <field name="mobile_phone" optional="hide"/>
                <field name="wage" string="Salaire de base" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
				<field name="wage_jour" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
                <field name="cotisation" optional="hide" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>

                <field name="date_cin" optional="hide"/>
                <field name="date_naissance" optional="hide"/>
                <field name="lieu_naissance" optional="hide"/>
                <field name="employee_age" optional="hide"/>
                <field name="gender" optional="hide"/>   
                <field name="marital" optional="hide"/>
                <field name="nombre_enfants" optional="hide"/>
                <field name="adress_personnel" optional="hide"/>
                <field name="phone1" optional="hide"/>
                <field name="phone2" optional="hide"/>
                <field name="phone3" optional="hide"/>
                <field name="company_id" optional="hide"/>
                <field name="active" optional="hide"/>
                <field name="black_list" optional="hide"/>
                <field name="embaucher_par" optional="hide"/>
                <field name="recommander_par" optional="hide"/>
                <field name="motif_enbauche" optional="hide"/>
                <field name="obs_embauche" optional="hide"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="working_years" optional="hide"/>
                <field name="bank_agence" optional="hide"/>
                <field name="ville_bank" optional="hide"/>
                <field name="remaining_days" optional="hide"/>
                <field name="responsable_id" optional="hide" groups ="hr_management.group_admin_paie"/>
            </tree>
        </field>
    </record>

    <record id="employee_view_form" model="ir.ui.view">
        <field name="name">Employees Form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form>
                <header>            
                    <button name="open_wizard" string="Add to black list" class="oe_highlight" attrs="{'invisible': [('black_list', '=', True)]}"
                     type="object" groups="hr_management.group_admin_paie,hr_management.group_agent_paie"/>
                    <button name="open_wizard" string="Remove from black list" class="oe_highlight" attrs="{'invisible': [('black_list', '=', False)]}"
                     type="object" groups="hr_management.group_admin_paie,hr_management.group_agent_paie"/>
                    <field name="state_employee_wtf" widget="statusbar" nolabel="1" options="{'clickable': '1'}"/>
                </header>
                <header>
                    
                </header>
                    <field name="black_list" invisible="1"/>
                    <sheet>
                        <div class="row mt-3">
                            <div class="col-md-4 col-lg-4">
                                <div class="card-deck">
                                    <div class="card">
                                        <center>
                                            <field name="image_1920" widget='image' class="card-img-top mt-3 mb-2"/>
                                        </center>
                                        <div class="card-body">
                                            <div class="md-form mb-n3">
                                                <label for="company_id" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-building form-control-icon"></span>
                                                        <field name="company_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="name" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-user form-control-icon"></span>
                                                        <field name="name" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="cin" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-id-card form-control-icon"></span>
                                                        <field name="cin" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="cnss" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-id-card form-control-icon"></span>
                                                        <field name="cnss" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="date_naissance" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-calendar form-control-icon"></span>
                                                        <field name="date_naissance" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="lieu_naissance" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="lieu_naissance" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="gender" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="gender" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="marital" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="marital" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="nombre_enfants" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="nombre_enfants" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="card text-white bg-dark mb-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center align-middle"><field name="employee_age"/> Ans</h4>
                                                    </div>
                                                </div>
                                            
                                                <div class="card text-white bg-dark mb-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center align-middle"><field name="working_years"/></h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <small class="text-muted">
                                                <label for="date_cin" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="date_cin" class="form-control" />
                                                    </div>  
                                                </div>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-8 col-lg-8">
                                <div class="card border-dark mb-3">
                                    <div class="card-header">Qualification</div>
                                    <div class="card-body text-dark">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6">
                                                <label for="type_emp" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="type_emp" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6">
                                                <label for="job_id" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-500px form-control-icon"></span>
                                                        <field name="job_id" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6">
                                                <label for="job" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-500px form-control-icon"></span>
                                                        <field name="job" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label for="embaucher_par" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="embaucher_par" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="recommander_par" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="recommander_par" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                            <div class="col-md-4">
                                                <label for="motif_enbauche" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-envelope form-control-icon"></span>
                                                        <field name="motif_enbauche" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-dark mb-3">
                                    <div class="card-header">Contacts</div>
                                    <div class="card-body text-dark">
                                        <label for="adress_personnel" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-map-marker-alt form-control-icon"></span>
                                                <field name="adress_personnel" class="form-control" />
                                            </div>  
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="mobile_phone" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-mobile-alt form-control-icon"></span>
                                                        <field name="mobile_phone" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="phone1" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-mobile-alt form-control-icon"></span>
                                                        <field name="phone1" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="phone2" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-mobile-alt form-control-icon"></span>
                                                        <field name="phone2" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="phone3" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-mobile-alt form-control-icon"></span>
                                                        <field name="phone3" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                    </div>
                                </div> 

                                    

                                <group>
                                    <group string="Qualification">
                                        <field name="type_emp"/> 
                                        <field name="job"/>
                                        <field name="diplome"/>
                                        <field name="embaucher_par" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="recommander_par" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="motif_enbauche"/>
                                        <field name="obs_embauche" />
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        
                                    <!-- <field name="payslip_count"/> -->
                                        <field name="wage" string="Salaire de base"/>
                                        <field name="wage_jour" />
                                        <field name="chantier_id" options="{'no_create': True}"/> 
                                        <field name="emplacement_chantier_id" options="{'no_create': True}"/>
                                        <field name="responsable_id" options="{'no_create': True, 'no_open': True}" groups="hr_management.group_admin_paie"/>
                                    </group> 
                                    <group string="Informations bancaires">
                                        <group>
                                            <!--<field name="bank"/>-->
                                            <field name="bank_account"/>
                                            <field name="bank_agence"/>
                                            <field name="ville_bank"/>
                                        </group>	
                                    </group>
                                </group>

                                <group>
                                    <group string="CIMR">
                                        <group>
                                            <field name="cotisation"/>
                                            <field name="montant_cimr"/>
                                        </group>	
                                    </group>
                                    <group string="Panier de Congés">
                                        <group>
                                            <field name="remaining_days" readonly="1"/>
                                            <!--<field name="nbr_jour_ferie"/>-->
                                        </group>	
                                    </group>
                                </group>
                                <group string="Historique Blacklist" 
                                    groups="hr_management.group_admin_paie,hr_management.group_agent_paie,
                                            hr_management.group_service_analytique,hr_management.group_controle_gestion,
                                            hr_management.group_cnss_juridique">
                                    <field name="blacklist_histo" nolabel="1">
                                        <tree class="table" create="false" edit="false">
                                            <field name="responsable_id"/>
                                            <field name="directeur_id"/>
                                            <field name="chantier_id"/>
                                            <field name="motif"/>
                                            <field name="date_effet"/>
                                            <field name="action"/>
                                            <field name="user_doing_action"/>
                                        </tree>
                                    </field>

                                </group>
                            </div>
                        </div>
                    </sheet>
                    <div class="row mx-md-n5" attrs="{'invisible': [('black_list', '=', False)]}">
                        <div class="alert alert-danger text-center" role="alert">
                            Attention ! Cet Employé figure dans la liste noire
                        </div>
                    </div>
                    
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_search" model="ir.ui.view">
        <field name="name">Employee Recherche</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
				<field name="identification_id" />
                <field name="cin"/>
                <field name="cnss"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id"/>				
            </search>
        </field>
    </record>


    <record id='employee_action' model='ir.actions.act_window'>
        <field name="name"> HR Management - Employees </field>
        <field name="res_model">hr.employee</field>
        <field name="view_id" ref="employee_tree"/> 
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[('black_list', '=', False)]</field>
    </record>

</odoo>

