                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="nombre_enfants" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="card text-white bg-dark mb-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center align-middle"><field name="employee_age"/> Ans</h4>
                                                    </div>
                                                </div>
                                            
                                                <div class="card text-white bg-dark mb-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center align-middle"><field name="working_years"/></h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <small class="text-muted">
                                                <label for="date_cin" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="date_cin" class="form-control" />
                                                    </div>  
                                                </div>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-8 col-lg-8">
                                <div class="card border-dark mb-3">
                                    <div class="card-header">Qualification et affectation</div>
                                    <div class="card-body text-dark">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6">
                                                <label for="type_emp" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="type_emp" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6">
                                                <label for="job_id" class=""/>
