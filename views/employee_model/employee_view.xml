                                            <label for="nbre_heure_worked_par_jour_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nbre_heure_worked_par_jour_related" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="nbre_heure_worked_par_demi_jour_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nbre_heure_worked_par_demi_jour_related" class="form-control"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="definition_nbre_jour_worked_par_mois_related" class=""/>
