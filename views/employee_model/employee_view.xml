<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='employee_action' model='ir.actions.act_window'>
        <field name="name"> HR Management  </field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="employee_tree" model="ir.ui.view">
        <field name="name">HR Employee List</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree decoration-success="state_employee_wtf == 'new'" decoration-danger="state_employee_wtf == 'stc'">
                <field name="name" />
				<field name="identification_id" />
                <field name="cin"/>
                <field name="cnss"/>
                <field name="employee_age"/>
				<field name="job" />
                <field name="diplome"/>
				<field name="type_emp" />

				<!--
                <field name="profile_paie"/>
				<field name="chantier_id"/>
				<field name="vehicle_id"/>
				<field name="emplacement_chantier_id"/>
                <field name="cnss"/>
                -->
				
				<field name="bank_account" />
				<field name="mobile_phone" />
				<field name="state_employee_wtf"/>
                <field name="montant_cimr"/>
            </tree>
        </field>
    </record>

    <record id="employee_view_form" model="ir.ui.view">
        <field name="name">Employees Form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--    
                    <button name="creatiion_individuel_rapport_pointage" string="Générer un rapport" type="object" groups="nxtm_employee_mngt.group_pointage_admin"/>
                    <button name="activation" string="Activé l'employée" type="object" groups="nxtm_employee_mngt.group_pointage_admin"/>
                    <field name="state_employee_wtf" widget="statusbar"/>
                    -->
                    <button name="creatiion_individuel_rapport_pointage" string="Générer un rapport"/>
                    <button name="activation" string="Activé l'employée"/>
                </header>
                <sheet>
                    <group string="Informations Personnels">
                        <field name="cin"/>
                        <field name="name"/>
                        <field name="cnss"/>
                        <field name="date_cin"/>
                        <field name="date_naissance" />
                        <field name="lieu_naissance" />
                        <field name="employee_age" />
                        <!--<field name="working_years"/>-->
                        <field name="gender" />
                        <field name="marital" />
                        <!--<field name="nombre_enfants" />-->
                        <field name="adress_personnel" />
                        <field name="mobile_phone" />
                        <field name="phone1" />
                        <field name="phone2" />
                        <field name="phone3" />
                    </group>
                    <group>
                        <!--<field name="company_id" options="{'no_create': True}"/>-->
                        <field name="active"/>
                        <field name="black_list"/>
                        <field name="motif_ln"/>
                        <field name="bool_company"/> 
                    </group>
                    <group>
					    <group string="Qualification">
                            <field name="type_emp"/> 
                            <field name="job"/>
                            <field name="diplome"/>
							<!--
                            <field name="chantier_affect" options="{'no_create': True}"/>
                            <field name="vehicle_id" options="{'no_create': True}"/>
							<field name="emplacement_chantier_id" options="{'no_create': True}"/>
							<field name="profile_paie" />
                            <field name="wage" string="Salaire de base"/>
							<field name="wage_jour" />
                            -->
                        </group> 
                        <group string="Informations bancaires">
                            <group>
                                <!--field name="bank"/-->
                                <field name="bank_account"/>
                                <field name="bank_agence"/>
                                <field name="ville_bank"/>
                            </group>	
					    </group>
                        <group>
                            <!--
                            <field name="embaucher_par"/>
                            <field name="recommander_par"/>
                            -->
                            <field name="motif_enbauche"/>
                            <field name="obs_embauche" />
                            <field name="state_employee_wtf"/>
                        </group>
                    </group>

                    <group>
                        <group string="CIMR">
                            <group>
                                <field name="cotisation"/>
                                <field name="montant_cimr"/>
                            </group>	
                        </group>
                        <group string="Panier de Congés">
                            <group>
                                <!--<field name="remaining_leaves" readonly="1"/>-->
                                <!--<field name="nbr_jour_ferie"/>-->
                            </group>	
                        </group>
                    </group>
                    
                    <!--
                    <group string="Formule Salaire">
                        
                        <center>
                            <button string="Recuperer rubriques par defaut" name="retrieve_contract_lines" type="object" />
                            <button string="Vider les rubriques" name="vider_contract_lines" type="object" />
                        </center>
                        
                        <field name="line_ids" string="Lignes de rubriques" colspan="4" nolabel="1" >
                            <tree colors="red:display==True;">
                                <field name="category_id" on_change="onchange_category(category_id)" string="Nom (originaire de..)"  />
                                <field name="libelle" string="Libelle" invisible="1" />
                                <field name="name" string="name (debug)" invisible="1"/>
                                <field name="code"/>
                                <field name="a_afficher" string="Afficher dans bulletin" invisible="1"/>
                                <field name="sequence" />
                                <field name="valeur" on_change="onchange_amount(amount, amount_type)"  string="Valeur"  />
                                <field name="display" invisible="1"/>
                            </tree>
                        </field>     
                    </group>
                    --> 
                    
                </sheet>
                <!-- Mail mixin fields -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_search" model="ir.ui.view">
        <field name="name">Employee Recherche</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
				<field name="identification_id" />
                <field name="cin"/>
                <field name="cnss"/>
                <field name="employee_age"/>
				<field name="job" />
                <field name="diplome"/>
				<field name="type_emp" />
				<!--
                <field name="profile_paie"/>
				<field name="chantier_id"/>
				<field name="vehicle_id"/>
				<field name="emplacement_chantier_id"/>
                <field name="cnss"/>
                -->
				<field name="bank_account" />
				<field name="mobile_phone" />
				<field name="state_employee_wtf"/>
                <field name="montant_cimr"/>
            </search>
        </field>
    </record>
</odoo>