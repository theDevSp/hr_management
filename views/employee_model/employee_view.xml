                                                    <div class="form-group">
                                                        <span class="fas fa-users form-control-icon"></span>
                                                        <field name="emplacement_chantier_id" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label for="embaucher_par" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="embaucher_par" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="recommander_par" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-user form-control-icon"></span>
                                                        <field name="recommander_par" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                            <div class="col-md-4">
                                                <label for="motif_enbauche" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-envelope form-control-icon"></span>
                                                        <field name="motif_enbauche" options="{'no_create': True, 'no_open': True}" class="form-control" />
                                                    </div>  
                                                </div>      
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <div class="card border-dark mb-3">
                                <div class="card-header">Contacts</div>
                                <div class="card-body text-dark">
                                    <label for="adress_personnel" class=""/>
                                    <div class="main">
                                        <div class="form-group">
                                            <span class="fas fa-map-marker-alt form-control-icon"></span>
                                            <field name="adress_personnel" class="form-control" />
                                        </div>  
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="mobile_phone" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-mobile-alt form-control-icon"></span>
                                                    <field name="mobile_phone" class="form-control" />
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="phone1" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-mobile-alt form-control-icon"></span>
                                                    <field name="phone1" class="form-control" />
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="phone2" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-mobile-alt form-control-icon"></span>
                                                    <field name="phone2" class="form-control" />
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="phone3" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-mobile-alt form-control-icon"></span>
                                                    <field name="phone3" class="form-control" />
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                </div>
                            </div> 

                            <div class="card border-dark mb-3" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,
                                        hr_management.group_service_analytique,hr_management.group_controle_gestion,
                                            hr_management.group_cnss_juridique">
                                <div class="card-header">Informations sur Contrat</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="ref_contrat" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-barcode form-control-icon"></span>
                                                    <field name="ref_contrat" class="form-control" options="{'no_create': True, 'no_open': False}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chantier_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier_related" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="date_start" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-calendar form-control-icon"></span>
                                                    <field name="date_start" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="type_contrat" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-file-contract form-control-icon"></span>
                                                    <field name="type_contrat" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="date_end" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-calendar form-control-icon"></span>
                                                    <field name="date_end" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="wage" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="wage" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                    <center>
                                        <div class="row">
                                            <div class="col-md-2"></div>
                                            <div class="col-md-3" style="max-width: 30em;">
                                                <label for="salaire_actuel" class=""/>
                                                <div class="card text-white bg-dark mb-3">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center align-middle"><field name="salaire_actuel"/> </h4>
                                                    </div>
                                                </div>
                                            </div>
                                             <div class="col-md-6 mt-4">
                                                <div class="alert alert-info text-center" role="alert">
                                                    Le salaire actuel représente le salaire de base plus les augmentations liées à cet employé.
                                                </div>
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                            <div class="card border-dark mb-3" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,
                                        hr_management.group_service_analytique,hr_management.group_controle_gestion,
                                            hr_management.group_cnss_juridique">
                                <div class="card-header">Informations sur Profile de Paie</div>
                                <div class="card-body text-dark">
                                    <div class="row mt-2"></div>
                                    <div class="row mt-3">
                                        <div class="col-md-4">
                                            <label for="completer_salaire_related" class=""/>
