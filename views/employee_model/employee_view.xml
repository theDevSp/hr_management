                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="type_profile_related" class=""/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fa fa-sliders form-control-icon"></span>
                                                    <field name="type_profile_related" class="form-control"/>
