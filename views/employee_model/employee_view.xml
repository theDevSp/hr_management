<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="employee_tree" model="ir.ui.view">
        <field name="name">HR Employee List</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cin"/>
                <field name="cnss" optional="show"/>
				<field name="job" optional="show"/>
                <field name="type_emp" optional="show"/>
                <field name="chantier_id" optional="show"/>
                <field name="emplacement_chantier_id" optional="show"/>
                <field name="state_employee_wtf" widget="badge" decoration-success="state_employee_wtf == 'new'" decoration-danger="state_employee_wtf == 'stc'"/>
                <field name="diplome" optional="hide"/>				
				<field name="bank_account" optional="hide"/>
                
                <field name="montant_cimr" optional="hide" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
                <field name="mobile_phone" optional="hide"/>
                <field name="wage" string="Salaire de base" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
				<field name="wage_jour" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>
                <field name="cotisation" optional="hide" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique"/>

                <field name="date_cin" optional="hide"/>
                <field name="date_naissance" optional="hide"/>
                <field name="lieu_naissance" optional="hide"/>
                <field name="employee_age" optional="hide"/>
                <field name="gender" optional="hide"/>   
                <field name="marital" optional="hide"/>
                <field name="nombre_enfants" optional="hide"/>
                <field name="adress_personnel" optional="hide"/>
                <field name="phone1" optional="hide"/>
                <field name="phone2" optional="hide"/>
                <field name="phone3" optional="hide"/>
                <field name="company_id" optional="hide"/>
                <field name="active" optional="hide"/>
                <field name="black_list" optional="hide"/>
                <field name="embaucher_par" optional="hide"/>
                <field name="recommander_par" optional="hide"/>
                <field name="motif_enbauche" optional="hide"/>
                <field name="obs_embauche" optional="hide"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="working_years" optional="hide"/>
                <field name="bank_agence" optional="hide"/>
                <field name="ville_bank" optional="hide"/>
                <field name="remaining_days" optional="hide"/>
                <field name="responsable_id" optional="hide" groups ="hr_management.group_admin_paie"/>
            </tree>
        </field>
    </record>

    <record id="employee_view_form" model="ir.ui.view">
        <field name="name">Employees Form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">            
                    <button name="open_wizard" string="Add to black list" class="oe_highlight" attrs="{'invisible': [('black_list', '=', True)]}"
                     type="object" groups="hr_management.group_admin_paie,hr_management.group_agent_paie"/>
                    <button name="open_wizard" string="Remove from black list" class="oe_highlight" attrs="{'invisible': [('black_list', '=', False)]}"
                     type="object" groups="hr_management.group_admin_paie,hr_management.group_agent_paie"/>
                    <field name="state_employee_wtf" widget="statusbar" nolabel="1" options="{'clickable': '1'}"/>
                </header>
                <header>
                    
                </header>
                    <field name="black_list" invisible="1"/>
                    <div class="container" attrs="{'invisible': [('black_list', '=', False)]}">
                        <div class="alert alert-danger text-center" role="alert">
                            Attention ! Cet Employé figure dans la liste noire
                        </div>
                    </div>
                    
                    <sheet>
                        <div class="oe_button_box bar-box-shadow" name="button_box">
                            <button name="all_augmentations" type="object" class="oe_stat_button" icon="fa-chart-line" string="Augmentations" width="150"/>
                            <button name="all_contracts" type="object" class="oe_stat_button" icon="fa-paste" string="Contracts" width="150"/>
                        </div> 
                        <div class="row mt-3">
                            <div class="col-md-4 col-lg-4">
                                <div class="card-deck">
                                    <div class="card">
                                        <center>
                                            <field name="image_1920" widget='image' class="card-img-top mt-3 mb-2"/>
                                        </center>
                                        <div class="card-body">
                                            <div class="md-form mb-n3">
                                                <label for="company_id" class=""/>
