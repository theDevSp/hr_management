                            <group>
                                <!--<field name="bank"/>-->
                                <field name="bank_account"/>
                                <field name="bank_agence"/>
                                <field name="ville_bank"/>
                            </group>	
					    </group>
                    </group>

                    <group>
                        <group string="CIMR">
                            <group>
                                <field name="cotisation"/>
                                <field name="montant_cimr"/>
                            </group>	
                        </group>
                        <group string="Panier de CongÃ©s">
                            <group>
                                <field name="remaining_days" readonly="1"/>
                                <!--<field name="nbr_jour_ferie"/>-->
                            </group>	
                        </group>
                    </group>
                    <group string="Historique Blacklist" groups="hr_management.group_admin_paie,hr_management.group_agent_paie,hr_management.group_service_analytique,hr_management.group_controle_gestion,hr_management.group_cnss_juridique">
                        <group>
                            <field name="blacklist_histo" nolabel="1">
                                <tree class="table" create="false" edit="false">
                                    <field name="responsable_id"/>
                                    <field name="directeur_id"/>
                                    <field name="chantier_id"/>
                                    <field name="motif"/>
                                    <field name="date_effet"/>
                                    <field name="action"/>
                                    <field name="user_doing_action"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_search" model="ir.ui.view">
        <field name="name">Employee Recherche</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
				<field name="identification_id" />
                <field name="cin"/>
                <field name="cnss"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id"/>				
            </search>
        </field>
    </record>

