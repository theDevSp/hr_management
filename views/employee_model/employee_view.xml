                                                    <div class="form-group">
                                                        <span class="fas fa-building form-control-icon"></span>
                                                        <field name="company_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="name" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-user form-control-icon"></span>
                                                        <field name="name" class="form-control" required="1"/>
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="cin" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-id-card form-control-icon"></span>
                                                        <field name="cin" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="cnss" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-id-card form-control-icon"></span>
                                                        <field name="cnss" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="date_naissance" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fa fa-calendar form-control-icon"></span>
                                                        <field name="date_naissance" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="lieu_naissance" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="lieu_naissance" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="gender" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="gender" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="marital" class=""/>
                                                <div class="main">
                                                    <div class="form-group">
                                                        <span class="fas fa-city form-control-icon"></span>
                                                        <field name="marital" class="form-control" />
                                                    </div>  
                                                </div>
                                            </div>
                                            <div class="md-form mb-n3">
                                                <label for="nombre_enfants" class=""/>
