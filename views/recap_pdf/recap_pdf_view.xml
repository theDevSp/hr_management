<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="recap_pdf_tree" model="ir.ui.view">
        <field name="name">Les recap</field>
        <field name="model">hr.recap.pdf</field>
        <field name="arch" type="xml">
            <tree string="Recap PDF" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="period_id"/>
                <field name="quinzaine"/>
                <field name="type_emp"/>
                <field name="responsable_id"/>
            </tree>
        </field>
    </record>
    <record id="recap_pdf_formulaire" model="ir.ui.view">
        <field name="name">Recap Form</field>
        <field name="model">hr.recap.pdf</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="row mt-3 justify-content-center">
                        <div class="col-12 col-md-8 mt-3">
                            <div class="bg-white shadow p-3">
                                <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                                <div class="card bg-light my-3">
                                    <div class="card-body text-center">
                                        <h2 class="card-text">INFORMATIONS DE LA RECAP</h2>
                                    </div>
                                </div>
                                <div class="card bg-light my-3">
                                    <div class="card-body">  
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="name" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="name" class="form-control"/>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="period_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="period_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="quinzaine" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="quinzaine" class="form-control"/>
                                        </div>  
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="type_emp" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="type_emp" class="form-control" />
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="responsable_id" class=""/></span>
                                            </div>
                                            <field name="responsable_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                        </div>
                                    </div> 
                                </div> 
                            </div>
                        </div>   
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bg-white shadow p-3">
                                <div class="card bg-light my-3">
                                    <div class="card-body text-center">
                                        <h2 class="card-text">Les lignes de Recap</h2>
                                    </div>
                                </div>
                                <div class="card border-dark mb-3 bg-light" style="text-align:left;">
                                    <div class="card-body text-dark">
                                        <field name="line_ids">
                                            <tree limit="5">
                                                <field name="chantier_id"/>
                                                <field name="emplacement_chantier_id"/>
                                                <field name="nombre_effectif"/>
                                                <field name="montant_total"/>
                                            </tree>
                                        </field>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter mt-3">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>