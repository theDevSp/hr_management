<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='fiche_paie_action' model='ir.actions.act_window'>
        <field name="name">Fiche de paie</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="fiche_paie_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="chantier_id"/>
                <field name="period_id"/>
                <field name="net_pay"/>
                <field name="nbr_jour_travaille"/>
                <field name="jr_travaille_par_chantier"/>
                <field name="type_fiche"/>
                <field name="stc_id"/>
            </tree>
        </field>
    </record>

    <record id="fiche_paie_par_employee_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="chantier_id"/>
                <field name="period_id"/>
                <field name="net_pay"/>
                <field name="nbr_jour_travaille"/>
                <field name="jr_travaille_par_chantier"/>
                <field name="type_fiche"/>
                <field name="stc_id"/>
            </tree>
        </field>
    </record>

    <record id="fiche_paie_formulaire" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">            
                    <!-- <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft','validee','approuvee','refusee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_validee" string="Valider" type="object" attrs="{'invisible': [('state', 'in', ('validee','approuvee','refusee','annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_annulee" string="Annuler" type="object" attrs="{'invisible': [('state', 'in', ('annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/> -->
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <div class="card border-dark mb-3 bg-info">
                                <div class="card-header text-center">
                                    <h5>Libellé</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h3>
                                        <field name="name"/>
                                    </h3>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-success">
                                <div class="card-header text-center">
                                    <h5>Type de fiche</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h3>
                                        <field name="type_fiche"/>
                                    </h3>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 bg-success" attrs="{'invisible': [('type_fiche', '!=', 'stc')]}">
                                <div class="card-header text-center">
                                    <h5>Libellé du STC</h5>
                                </div>
                                <div class="card-body text-dark text-center">
                                    <h3>
                                        <field name="stc_id" options="{'no_create': True, 'no_open': True}"/>
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="card border-dark mb-3 bg-light">
                                <div class="card-body text-dark mt-3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="employee_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-user form-control-icon"></span>
                                                    <field name="employee_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chantier_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-city form-control-icon"></span>
                                                    <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="period_id"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="period_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="net_pay"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="net_pay" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="nbr_jour_travaille"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-clock form-control-icon"></span>
                                                    <field name="nbr_jour_travaille" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="affich_bonus_jour"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="affich_bonus_jour" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="affich_jour_conge"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                    <field name="affich_jour_conge" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="date"/>
                                            <div class="main">
                                                <div class="form-group">
                                                    <span class="fas fa-calendar form-control-icon"></span>
                                                    <field name="date" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card border-dark mb-3 mt-3">
                                <div class="card-header">Jours travaillés par chantier</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="jr_travaille_par_chantier" options="{'no_create': True, 'no_open': True}" readonly="1">
                                                        <tree class="table" create="false" edit="false">
                                                            <field name="chantier_id"/>
                                                            <field name="emplacement_chantier_id"/>
                                                            <field name="nbr_jour"/>
                                                            <field name="nbr_heure"/>
                                                            <field name="nbr_dimanches_travaille"/>
                                                            <field name="fiche_paie_id"/>
                                                        </tree>
                                                    </field>
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fiche_paie_search" model="ir.ui.view">
        <field name="name">Recherche - Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="period_id"/>
            </search>
        </field>
    </record>
</odoo>