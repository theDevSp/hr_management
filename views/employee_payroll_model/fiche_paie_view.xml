<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fiche_paie_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1">
                <field name="name"/>
                <field name="period_id" optional="hide"/>
                <field name="date_validation" optional="show"/>
                <field name="quinzaine" optional="show"/>
                <field name="employee_id"/>
                <field name="type_emp" optional="show"/>
                <field name="job_id" optional="show"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id" optional="show"/>
                <field name="vehicle_id" optional="show"/>
                <field name="net_pay"/>
                <field name="affich_bonus_jour" optional="hide"/>
                <field name="affich_jour_conge" optional="hide"/>
                <field name="salaire_actuel" optional="hide"/>
                <field name="nbr_jour_travaille" optional="hide"/>
                <field name="nbr_heure_travaille" optional="hide"/>
                <field name="jr_travaille_par_chantier" optional="hide"/>
                <field name="type_fiche" optional="hide"/>
                <field name="contract_id" optional="hide"/>
                <field name="rapport_id" optional="hide"/>
                
                <field name="stc_id" optional="hide"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'annulee'" decoration-success="state == 'validee'"/>
            </tree>
        </field>
    </record>

    <record id="fiche_paie_par_employee_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id"/>
                <field name="period_id"/>
                <field name="net_pay"/>
                <field name="nbr_jour_travaille"/>
                <field name="nbr_heure_travaille"/>
                <field name="jr_travaille_par_chantier"/>
                <field name="type_fiche"/>
                <field name="contract_id"/>
                <field name="date_validation"/>
                <field name="stc_id"/>
            </tree>
        </field>
    </record>

    <record id="fiche_paie_formulaire" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">            
                    <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_validee" string="Valider" type="object" attrs="{'invisible': [('state', 'in', ('validee','annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_annulee" string="Annuler" type="object" attrs="{'invisible': [('state', 'in', ('annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <div class="row mt-3">
                    <div class="col-12 col-md-3">
                        <div class="bg-white shadow p-3">
                            <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">INFORMATION DE LA FICHE</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">  
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="name" class=""/></span>
                                        </div>
                                        <field name="name" class="form-control"/>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="period_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                        </div>
                                        <field name="period_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="quinzaine" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                        </div>
                                        <field name="quinzaine" class="form-control"/>
                                    </div>  
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="date_validation" class=""/></span>
                                        </div>
                                        <field name="date_validation" class="form-control" />
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="type_fiche" class=""/></span>
                                        </div>
                                        <field name="type_fiche" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                    <div class="input-group mb-3" attrs="{'invisible': [('rapport_id', '=', False)]}">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="rapport_id" class=""/></span>
                                        </div>
                                        <field name="rapport_id" domain="[('employee_id', '=', employee_id)]" 
                                                                 class="form-control" 
                                                                 options="{'no_create': True}" 
                                                                 readonly="1"/>
                                    </div>
                                    <div class="input-group mb-3" attrs="{'invisible': [('type_fiche', '!=', 'stc')]}">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="stc_id" class=""/></span>
                                        </div>
                                        <field name="stc_id" domain="[('employee_id', '=', employee_id)]" options="{'no_create': True, 'no_open': True}"  class="form-control"/>
                                    </div>
                                </div> 
                            </div> 
                        </div>
                    </div>   
                    <div class="col-12 col-md-6">
                        <div class="bg-white shadow p-3">
                            <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">INFORMATION EMPLOYEE</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="employee_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="employee_id" class="form-control" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="contract_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="contract_id" domain="[('employee_id', '=', employee_id)]" class="form-control"
                                                    force_save="1" options="{'no_create': True}" 
                                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="type_emp" class=""/></span>
                                                </div>
                                                <field name="type_emp" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="job_id" class=""/></span>
                                                </div>
                                                <field name="job_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="chantier_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="emplacement_chantier_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="emplacement_chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="vehicle_id" class=""/></span>
                                                </div>
                                                <field name="vehicle_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div> 
                        </div>
                    </div>   

                    <div class="col-md-3">
                        <div class="bg-white shadow p-3">
                            <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">DETAILS SALAIRES</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">    
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="salaire_actuel" class=""/></span>
                                                </div>
                                                <field name="salaire_actuel" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="salaire_jour" class=""/></span>
                                                </div>
                                                <field name="salaire_jour" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="salaire_demi_jour" class=""/></span>
                                                </div>
                                                <field name="salaire_demi_jour" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="salaire_heure" class=""/></span>
                                                </div>
                                                <field name="salaire_heure" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div> 
                        </div>
                    </div>   
                </div>
                <sheet>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card border-dark mb-3 mt-3">
                                <div class="card-header">Jours travaill√©s par chantier</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="main">
                                                <div class="form-group">
                                                    <field name="jr_travaille_par_chantier" options="{'no_create': True, 'no_open': True}" readonly="1">
                                                        <tree class="table" create="false" edit="false">
                                                            <field name="chantier_id"/>
                                                            <field name="emplacement_chantier_id"/>
                                                            <field name="nbr_jour"/>
                                                            <field name="nbr_heure"/>
                                                            <field name="nbr_dimanches_travaille"/>
                                                            <field name="fiche_paie_id"/>
                                                        </tree>
                                                    </field>
                                                </div>  
                                            </div>      
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card border-dark mb-3 mt-3">
                                <div class="card-header">Informations sur la fiche de paie</div>
                                <div class="card-body text-dark">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row" invisible="1">
                                                <div class="col-md-4">
                                                    <label for="type_profile_related"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-clock form-control-icon"></span>
                                                            <field name="type_profile_related" class="form-control"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4" attrs="{'invisible': [('type_profile_related', '!=', 'j')]}">
                                                    <label for="nbr_jour_travaille"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-clock form-control-icon"></span>
                                                            <field name="nbr_jour_travaille" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4" attrs="{'invisible': [('type_profile_related', '!=', 'h')]}">
                                                    <label for="nbr_heure_travaille"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-clock form-control-icon"></span>
                                                            <field name="nbr_heure_travaille" class="form-control"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label for="net_pay"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                            <field name="net_pay" class="form-control"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="affich_bonus_jour"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                            <field name="affich_bonus_jour" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="affich_jour_conge"/>
                                                    <div class="main">
                                                        <div class="form-group">
                                                            <span class="fas fa-money-bill-wave form-control-icon"></span>
                                                            <field name="affich_jour_conge" class="form-control"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mb-4">
                                                <div class="col-md-4" style="height:5em;">
                                                    <label for="net_pay" class=""/>
                                                    <div class="card text-white bg-dark mb-3">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-center align-middle">
                                                                <field name="net_pay" style="height:0.3em;"/> 
                                                            </h4>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4" style="height:5em;">
                                                    <label for="affich_bonus_jour" class=""/>
                                                    <div class="card text-white bg-dark mb-3">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-center align-middle">
                                                                <field name="affich_bonus_jour" style="height:0.3em;"/>
                                                            </h4>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4" style="height:5em;">
                                                    <label for="affich_jour_conge" class=""/>
                                                    <div class="card text-white bg-dark mb-3">
                                                        <div class="card-body">
                                                            <h4 class="card-title text-center align-middle">
                                                                <field name="affich_jour_conge" style="height:0.3em;"/>
                                                            </h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fiche_paie_search" model="ir.ui.view">
        <field name="name">Recherche - Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="period_id"/>
                <searchpanel>
                    <field name="chantier_id" icon="fa-city" enable_counters="1" select="multi"/>
                    <field name="period_id" icon="fa-clock" enable_counters="1" select="multi"/>
                    <field name="quinzaine" icon="fa-clock" enable_counters="1"/>
                    <field name="emplacement_chantier_id" icon="fa-users" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>