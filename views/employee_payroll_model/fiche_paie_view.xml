<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fiche_paie_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1">
                <field name="name"/>
                <field name="period_id" optional="hide"/>
                <field name="date_validation" optional="show"/>
                <field name="quinzaine" optional="show"/>
                <field name="employee_id"/>
                <field name="type_emp" optional="show"/>
                <field name="job_id" optional="show"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id" optional="show"/>
                <field name="vehicle_id" optional="show"/>
                <field name="net_pay"/>
                <field name="affich_bonus_jour" optional="hide"/>
                <field name="affich_jour_conge" optional="hide"/>
                <field name="salaire_actuel" optional="hide"/>
                <field name="nbr_jour_travaille" optional="hide"/>
                <field name="nbr_heure_travaille" optional="hide"/>
                <field name="jr_travaille_par_chantier" optional="hide"/>
                <field name="type_fiche" optional="hide"/>
                <field name="contract_id" optional="hide"/>
                <field name="rapport_id" optional="hide"/>
                
                <field name="stc_id" optional="hide"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'annulee'" decoration-success="state == 'validee'"/>
            </tree>
        </field>
    </record>

    <record id="fiche_paie_par_employee_tree" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <tree string="Fiche de paie" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="chantier_id"/>
                <field name="emplacement_chantier_id"/>
                <field name="period_id"/>
                <field name="net_pay"/>
                <field name="nbr_jour_travaille"/>
                <field name="nbr_heure_travaille"/>
                <field name="jr_travaille_par_chantier"/>
                <field name="type_fiche"/>
                <field name="contract_id"/>
                <field name="date_validation"/>
                <field name="stc_id"/>
                <field name="state" widget="badge" 
                                                    decoration-muted="state == 'draft'" 
                                                    decoration-info="state == 'cal'" 
                                                    decoration-danger="state in ('blocked','annulee')" 
                                                    decoration-warning="state == 'validee'"
                                                    decoration-success="state == 'done'"
                                            />
            </tree>
        </field>
    </record>

    <record id="fiche_paie_formulaire" model="ir.ui.view">
        <field name="name">Fiche de paie</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form>
                <header class="bar-box-shadow mb-4">            
                    <button name="to_draft" string="Brouillon" type="object" attrs="{'invisible': [('state', 'in', ('draft','done'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie,hr_management.group_pointeur"/>
                    <button name="to_validee" string="Valider" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <field name="cal_state" invisible="1"/>
                    <button name="update_cal_state" string="Calculer" class="btn btn-success rounded border-1" icon="fa-calculator" type="object" attrs="{'invisible': ['|',('state', '!=', 'validee'),('cal_state', '=', True)]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="update_cal_state" string="Reset" class="btn btn-danger rounded border-1" icon="fa-undo" type="object" attrs="{'invisible': ['|',('state', '!=', 'validee'),('cal_state', '=', False)]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_done" string="Payer" class="btn btn-success rounded border-1" icon="fa-cash-register" type="object" attrs="{'invisible': ['|',('state', '!=', 'cal'),('cal_state','=',False)]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="reset" string="Reset" class="btn btn-warning rounded border-1" icon="fa-undo" type="object" attrs="{'invisible': [('state', '!=', 'cal')]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="block" string="Bloquer" class="btn btn-danger rounded border-1" icon="fa-ban" type="object" attrs="{'invisible': [('state', 'not in', ('cal','done'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="unblock" string="DÃ©bloquer" class="btn btn-warning rounded border-1" icon="fa-unlock" type="object" attrs="{'invisible': [('state', '!=', 'blocked')]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <button name="to_annulee" string="Annuler" type="object" attrs="{'invisible': [('state', 'in', ('annulee'))]}" groups ="hr_management.group_agent_paie,hr_management.group_admin_paie"/>
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <div class="row mt-3 justify-content-center">
                    <div class="col-12 col-md-8 col-lg-3 mt-3 mt-md-3">
                        <div class="bg-white shadow p-3">
                            <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">INFORMATION DE LA FICHE</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">  
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="name" class=""/></span>
                                        </div>
                                        <field name="name" class="form-control"/>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="period_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                        </div>
                                        <field name="period_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="quinzaine" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                        </div>
                                        <field name="quinzaine" class="form-control"/>
                                    </div>  
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="date_validation" class=""/></span>
                                        </div>
                                        <field name="date_validation" class="form-control" />
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="type_fiche" class=""/></span>
                                        </div>
                                        <field name="type_fiche" class="form-control" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                    <div class="input-group mb-3" attrs="{'invisible': [('rapport_id', '=', False)]}">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="rapport_id" class=""/></span>
                                        </div>
                                        <field name="rapport_id" domain="[('employee_id', '=', employee_id)]" 
                                                                 class="form-control" 
                                                                 options="{'no_create': True}" 
                                                                 readonly="1"/>
                                    </div>
                                    <div class="input-group mb-3" attrs="{'invisible': [('type_fiche', '!=', 'stc')]}">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" ><label for="stc_id" class=""/></span>
                                        </div>
                                        <field name="stc_id" domain="[('employee_id', '=', employee_id)]" options="{'no_create': True, 'no_open': True}"  class="form-control"/>
                                    </div>
                                </div> 
                            </div> 
                        </div>
                    </div>   
                    <div class="col-12 col-md-8 col-lg-6 mt-3 mt-md-3">
                        <div class="bg-white shadow p-3">
                            <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">INFORMATION EMPLOYEE</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="employee_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="employee_id" class="form-control" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="contract_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="contract_id" domain="[('employee_id', '=', employee_id)]" class="form-control"
                                                    force_save="1" options="{'no_create': True}" 
                                                    attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="working_years" class=""/></span>
                                                </div>
                                                <field name="working_years" class="form-control"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="type_emp" class=""/></span>
                                                </div>
                                                <field name="type_emp" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="job_id" class=""/></span>
                                                </div>
                                                <field name="job_id" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="chantier_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="emplacement_chantier_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                                </div>
                                                <field name="emplacement_chantier_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" ><label for="vehicle_id" class=""/></span>
                                                </div>
                                                <field name="vehicle_id" class="form-control" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div> 
                        </div>
                    </div>   
                </div>
                <div class="row mt-3 justify-content-center">
                    <div class="col-12 col-md-8 col-lg-3">
                        <div class="col- mt-3 justify-content-center">
                            <field name="type_profile_related" invisible="1"/>
                            <div class="bg-white shadow p-3">
                                <div class="card bg-light my-3">
                                    <div class="card-body text-center">
                                        <h2 class="card-text">RESULTAT DE CALCULE</h2>
                                    </div>
                                </div>
                                <div class="card bg-light my-3">
                                    <div class="card-body">
                                        <div class="input-group mb-3" attrs="{'invisible': [('type_profile_related', '=', 'h')]}">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="nbr_jour_travaille" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="nbr_jour_travaille" class="form-control text-center" 
                                                    attrs="{'readonly': [('state', '!=', 'draft')],'required': [('type_profile_related', '=', 'j')]}"/>
                                        </div>
                                        <div class="input-group mb-3" attrs="{'invisible': [('type_profile_related', '=', 'j')]}">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="nbr_heure_travaille" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="nbr_heure_travaille" class="form-control text-center" 
                                                    attrs="{'readonly': [('state', '!=', 'draft')],'required': [('type_profile_related', '=', 'm')]}"/>
                                        </div>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="affich_bonus_jour" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="affich_bonus_jour" class="form-control text-center"/>
                                        </div>
                                        <field name="new" invisible="1"/>
                                        <div class="input-group mb-3" attrs="{'invisible': [('new', '=', True)]}">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="net_pay" class=""/></span>
                                            </div>
                                            <field name="net_pay" class="form-control text-center"/>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><div class="o_form_label o_form_label_readonly">DH</div></span>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" attrs="{'invisible': [('new', '=', False)]}">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="net_paye_archive" class=""/></span>
                                            </div>
                                            <field name="net_paye_archive" class="form-control text-center"/>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><div class="o_form_label o_form_label_readonly">DH</div></span>
                                            </div>
                                        </div>
                                    </div> 
                                </div> 
                            </div>
                        </div>
                        <div class="col- mt-3 justify-content-center">
                            <div class="bg-white shadow p-3">
                                <div class="alert alert-danger text-center mb-2"><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> Champs Obligatoire </div>
                                <div class="card bg-light my-3">
                                    <div class="card-body">   
                                        <ul class="list-group">
                                            <li class="list-group-item active text-center">DETAILS SALAIRE</li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="salaire_actuel"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="salaire_actuel" readonly="1" class="h3"/> DH
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="salaire_jour"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="salaire_jour" readonly="1" class="h3"/> DH
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="salaire_demi_jour"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="salaire_demi_jour" readonly="1" class="h3"/> DH
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="salaire_heure"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="salaire_heure" readonly="1" class="h3"/> DH
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item active text-center">DETAILS JOURS</li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_jour_conge"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="affich_jour_conge" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_jour_dimanche_conge"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="affich_jour_dimanche_conge" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_conge"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="affich_conge" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_jour_dimanche"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="affich_jour_dimanche" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_jour_ferier"/>
                                                    </div>
                                                    <div class="col-4 bg-success text-center text-white">
                                                        <field name="affich_jour_ferier" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
                                            
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-0">
                                                <div class="row w-100 h-100 m-0">
                                                    <div class="col-8 p-2">
                                                        <label for="affich_jour_absence"/>
                                                    </div>
                                                    <div class="col-4 bg-danger text-center text-white">
                                                        <field name="affich_jour_absence" readonly="1" class="h3"/>
                                                    </div>
                                                </div>
                                            </li>
    
                                        </ul>  
                                    </div> 
                                </div> 
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="row mt-3 mt-md-0 justify-content-center">
                            <div class="col-12">
                                <field name="addition" class="d-block" widget="addition_payement"/>
                            </div>
                        </div>
                        <div class="row mt-3 justify-content-center">
                            <div class="col-12">
                                <field name="deduction" class="d-block" widget="deduction_payement"/>    
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3 justify-content-center">
                    <div class="col-12 col-lg-4">
                        <div class="bg-white shadow p-3">
                            <div class="col-12">
                                <div class="card my-3">
                                    <div class="card-body text-center">
                                        <h6 class="card-text">Note</h6>
                                    </div>
                                    <div class="card-body text-dark">
                                        <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                </div>  
                            </div> 
                        </div>
                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="bg-white shadow p-3">
                            <div class="card bg-light my-3">
                                <div class="card-body text-center">
                                    <h2 class="card-text">DETAILS CHANTIER / EQUIPE / CODE ENGIN</h2>
                                </div>
                            </div>
                            <div class="card bg-light my-3">
                                <div class="card-body">
                                    <field name="jr_travaille_par_chantier">
                                        <tree create="false" edit="false">
                                            <field name="chantier_id"/>
                                            <field name="emplacement_chantier_id"/>
                                            <field name="vehicle_id"/>
                                            <field name="nbr_jour" attrs="{'column_invisible': [('parent.type_profile_related', '=', 'h')]}"/>
                                            <field name="nbr_heure" attrs="{'column_invisible': [('parent.type_profile_related', '=', 'j')]}"/>
                                        </tree>
                                    </field>
                                </div> 
                            </div> 
                        </div>
                    </div>
                </div>
                <div class="oe_chatter mt-3">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fiche_paie_search" model="ir.ui.view">
        <field name="name">Recherche - Fiche de paie</field>
        <field name="model">hr.payslip</field>
