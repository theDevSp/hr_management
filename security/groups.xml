<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_management">                                
        <field name="name">Groupe privilège Employee</field>                                
        <field name="description">User access level for this module</field>                                
        <field name="sequence">1</field>                            
    </record>

    <record id="group_admin_paie" model="res.groups">                                
        <field name="name">Administrateur de paie</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"></field>                                
        <field name="category_id" ref="module_management"></field>                            
    </record>
    
    <record id="group_agent_paie" model="res.groups">                                
        <field name="name">Agent de paie</field>
        <field name="category_id" ref="module_management"></field>                            
    </record>  

    <record id="group_service_analytique" model="res.groups">
        <field name="name">Service Analytique</field>
        <field name="category_id" ref="module_management"></field>  
    </record>

    <record id="group_controle_gestion" model="res.groups">
        <field name="name">Contrôle de Gestion</field>
        <field name="category_id" ref="module_management"></field>
    </record>

    <record id="group_pointeur" model="res.groups">
        <field name="name">Pointeur</field>
        <field name="category_id" ref="module_management"></field> 
    </record>

     <record id="group_cnss_juridique" model="res.groups">
        <field name="name">CNSS, juridique ...</field>
        <field name="category_id" ref="module_management"></field> 
    </record>

    <record id="hr_recrutement_rule_admin_paie" model="ir.rule">
        <field name="name">Recrutement Rules Administrateur de Paie</field>
        <field name="model_id" ref="model_hr_recrutement"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('hr_management.group_admin_paie'))]"/>
    </record>

    <record id="hr_recrutement_rule_agent_paie" model="ir.rule">
        <field name="name">Recrutement Rules Agent de Paie</field>
        <field name="model_id" ref="model_hr_recrutement"/>
        <field name="domain_force">[('state','!=','draft')]</field>
        <field name="groups" eval="[(4,ref('hr_management.group_agent_paie'))]"/>
    </record>

    <record id="hr_recrutement_rule_pointeur" model="ir.rule">
        <field name="name">Recrutement Rules Pointeur</field>
        <field name="model_id" ref="model_hr_recrutement"/>
        <field name="domain_force">[('chantier_id','=','user.chantier_id')]</field>
        <field name="groups" eval="[(4,ref('hr_management.group_pointeur'))]"/>
    </record>
</odoo>