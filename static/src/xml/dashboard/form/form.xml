<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.dashboardForm" owl="1">
        <div class="card mx-4" style="background-color: #94A684 !important;">
            <div class="card-body">
                <div class="row px-4">
                    <div class="col-sm">
                        <div class="input-group mb-3 mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <label for="select-period">
                                        <strong>Période :</strong>
                                    </label>
                                </span>
                            </div>
                            <select required="True" id="select-period" class="form-control" name="period"
                                placeholder="Sélectionner une Période"></select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="input-group mb-3 mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <label for="select-type">
                                        <strong>Type d'employé :</strong>
                                    </label>
                                </span>
                            </div>
                            <select required="True" id="select-type" class="form-control" name="employe_type"
                                placeholder="Sélectionner le Type de l'employé"></select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="input-group mb-3 mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <label for="select-quinzine">
                                        <strong>Quinzine :</strong>
                                    </label>
                                </span>
                            </div>
                            <select required="True" id="select-quinzine" class="form-control" name="quinzine"
                                placeholder="Sélectionner le Quinzine"></select>
                        </div>
                    </div>
                </div>
                <div class="row px-4">
                    <div class="col-sm">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <label for="select-chantier">
                                        <strong>Chantier :</strong>
                                    </label>
                                </span>
                            </div>
                            <select required="True" id="select-chantier" class="form-control" name="chantier"
                                placeholder="Sélectionner un Chantier"></select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <label for="select-equipe">
                                        <strong>Équipe :</strong>
                                    </label>
                                </span>
                            </div>
                            <select id="select-equipe" class="form-control" name="equipe"
                                placeholder="Sélectionner l'Équipe"></select>
                        </div>
                    </div>
                </div>
                <div class="row px-4">
                    <div class="col-sm" >
                        <button style="float: right; width: 15%;" class="btn btn-info cursor-pointer" 
                        t-on-click="()=>props.onClick()">
                            Valider
                        </button>
                    </div>
                </div>
            </div>

        </div>

    </t>
</templates>