<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.hrPointageListView.Buttons" t-inherit="web.ListView.Buttons" owl="1">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="after">
            <div class="dropdown">
                <button t-if="nbSelected" class="custom ms-2 btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-print"></i>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a t-on-click="()=>this.print(model.root.data)" class="dropdown-item">
                            Imprimer
                        </a>
                    </li>
                </ul>
            </div>

            <div id="iframemodal" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button id="modalClose" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe id="iframeContainer" width="100%" height="750"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//button[hasclass('o_list_button_add')]" position="after">

            <!-- Button trigger modal -->
            <button t-if="!nbSelected" type="button" class="ms-2 btn btn-infos" t-on-click="()=>this.modalPrint(model.root.data)">
                <i class="fa fa-print"></i> Imprimer
            </button>

            <!-- Modal -->
            <div t-ref="modalPrint" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                        <form id="myForm" >
                            <div class="modal-header">
                                <button id="modalClose1" type="button" class="btn-close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row justify-content-center">
                                    <div class="col-8">
                                        <div class="bg-white shadow p-3">
                                            <div class="card bg-light my-3">
                                                <div class="card-body text-center">
                                                    <h2 class="card-text">Impression Mensuelle</h2>
                                                </div>
                                            </div>
                                            <div class="card bg-light my-3">
                                                <div class="card-body">
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" ><label for="select-period">Période :</label></span>
                                                        </div>
                                                        <select required="True" id="select-period" class="form-control" name="period" placeholder="Selectionner une Période"></select>
                                                    </div>
                    
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" ><label for="select-chantier">Chantier :</label></span>
                                                        </div>
                                                        <select required="True" id="select-chantier" class="form-control" name="chantier" placeholder="Selectionner un Chantier"></select>
                                                    </div>
                    
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" ><label for="select-type">Type d'employé :</label></span>
                                                        </div>
                                                        <select required="True" id="select-type" class="form-control" name="employe_type" placeholder="Type d'employe"></select>
                                                    </div>
                    
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" ><label for="select-quinzine">Quinzine :</label></span>
                                                        </div>
                                                        <select required="True" id="select-quinzine" class="form-control" name="quinzine" placeholder="Quinzine"></select>
                                                    </div>
                    
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" ><label for="select-equipe">Equipe :</label></span>
                                                        </div>
                                                        <select id="select-equipe" class="form-control" name="equipe" placeholder="Equipe"></select>
                                                    </div>
                                                </div> 
                                            </div> 
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" id="modalClose2">Close</button>
                                <button type="submit" class="btn btn-primary" id="modalSubmit">Imprimer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div t-ref="iframemodalPrint" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button id="modalIframeClose" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe id="iframeContainerModal" width="100%" height="750"></iframe>
                        </div>
                    </div>
                </div>
            </div>

        </xpath>
    </t>
</templates>