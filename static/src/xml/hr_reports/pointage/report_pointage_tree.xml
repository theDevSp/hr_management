<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.hrPointageListView.Buttons" t-inherit="web.ListView.Buttons" owl="1">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="after">
            <div class="dropdown">
                <button t-if="nbSelected" class="custom ms-2 btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-print"></i>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a t-on-click="()=>this.print(model.root.data)" class="dropdown-item">
                            Imprimer
                        </a>
                    </li>
                </ul>
            </div>

            <div id="iframemodal" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button id="modalClose" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe id="iframeContainer" width="100%" height="750"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//button[hasclass('o_list_button_add')]" position="after">

            <!-- Button trigger modal -->
            <button t-if="!nbSelected" type="button" class="ms-2 btn btn-primary" t-on-click="()=>this.modalPrint(model.root.data)">
                <i class="fa fa-print"></i> Imprimer
            </button>

            <!-- Modal -->
            <div t-ref="modalPrint" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Impression</h5>
                            <button id="modalClose1" type="button" class="btn-close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="control-group">
                                <label for="select-period">
                                    <h4>
                                        <b>Période :</b>
                                    </h4>
                                </label>
                                <select required="True" id="select-period" name="chantier" placeholder="Sélectionner une période"></select>
                            </div>

                            <div class="control-group mt-3">
                                <label for="select-chantier">
                                    <h4>
                                        <b>Chantier :</b>
                                    </h4>
                                </label>
                                <select required="True" id="select-chantier" name="chantier" placeholder="Sélectionner un Chantier"></select>
                            </div>

                            <div class="control-group mt-3">
                                <label for="select-type">
                                    <h4>
                                        <b>Type de l'employé :</b>
                                    </h4>
                                </label>
                                <select required="True" id="select-type" name="employe_type" placeholder="Sélectionner le Type de l'employé"></select>
                            </div>

                            <div class="control-group mt-3">
                                <label for="select-quinzine">
                                    <h4>
                                        <b>Quinzine :</b>
                                    </h4>
                                </label>
                                <select required="True" id="select-quinzine" name="quinzine" placeholder="Sélectionner le Quinzine"></select>
                            </div>

                            <div class="control-group mt-3">
                                <label for="select-equipe">
                                    <h4>
                                        <b>Équipe :</b>
                                    </h4>
                                </label>
                                <select id="select-equipe" name="equipe" placeholder="Sélectionner l'Équipe"></select>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="modalClose2">Close</button>
                            <button t-on-click="()=>this.verify()" type="button" class="btn btn-primary" id="modalSubmit">Imprimer</button>
                        </div>
                    </div>
                </div>
            </div>

            <div t-ref="iframemodalPrint" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button id="modalIframeClose" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <iframe id="iframeContainerModal" width="100%" height="750"></iframe>
                        </div>
                    </div>
                </div>
            </div>

        </xpath>
    </t>
</templates>