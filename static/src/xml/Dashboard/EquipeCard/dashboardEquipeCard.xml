<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.EquipeCard" owl="1">
        <div class="col-6 mt-3">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h2>
                            <span t-esc="props.name"></span>
                        </h2>
                        <div>
                            <button type="button" class="btn" style="color: #28a745;">
                                <i class="far fa-calendar-check fa-lg"></i>
                            </button>
                            <button type="button" class="btn" style="color: #c8626c;">
                                <i class="far fa-calendar-times fa-lg"></i>
                            </button>
                            <button type="button" class="btn" style="color: #007bff;">
                                <i class="fas fa-list fa-lg"></i>
                            </button>
                            <button type="button" class="btn" style="color: #dc3545;">
                                <i class="fas fa-trash fa-lg"></i>
                            </button>
                            <button type="button" class="btn" style="color: #2c4960;">
                                <i class="fas fa-undo fa-lg"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <EquipeCardDetails name="'Rapports Pointage'" icon="'fas fa-folder fa-lg'" />
                        </div>
                        <div class="col-3">
                            <EquipeCardDetails name="'Fiches de Paie'" icon="'fas fa-receipt fa-lg'" />
                        </div>
                        <div class="col-6">
                            <EquipeCardDetails name="'Montant'" icon="'fas fa-money-bill-alt fa-lg'" />
                        </div>
                    </div>
                    <EquipeCardDetailsTable />
                </div>
            </div>
        </div>
    </t>
</templates>