<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_management.main_dashboard" owl="1">
        <div class="overflow-auto bg-muted" style="height: 100%;">
            <div class="row pt-2 px-4">
                <div class="col-12">
                    <div class="alert text-center" style="background-color: rgb(93,187,70); color: aliceblue;">
                        <span style="font-size: large;">
                            <strong>Tableau de Bord :</strong>
                        </span>
                    </div>
                </div>
            </div>
            <Dashform onClickFrom.bind="generateDashboard" />
            <div class="row px-4 pt-1" t-if="!state.isFirstLoad">
                <EquipeCard regenerate.bind="generateDashboard" data="obj" t-foreach="state.data" t-as="obj" t-key="obj.id" />
            </div>
            <div class="row pt-4 px-4" t-if="state.isFirstLoad">
                <div class="col-12">
                    <div class="alert alert-danger text-center">
                        <span style="font-size: large;">
                            <i class="fas fa-exclamation-triangle" style="color: #f00000;"></i> <strong>Valider le formulaire avec les informations requises.                            </strong>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>