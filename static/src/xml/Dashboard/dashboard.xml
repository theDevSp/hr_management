<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_management.main_dashboard" owl="1">
        <div class="overflow-auto bg-muted" style="height: 100%;">
            <div class="row pt-2 px-4">
                <div class="col-12">
                    <div class="alert alert-success text-center">
                        <span style="font-size: large;">
                            <strong>Tableau de Bord :</strong>
                        </span>
                    </div>
                </div>
            </div>
            <Dashform onClickFrom.bind="generateDashboard" />
            <div class="row px-4 pt-1" t-if="!state.isFirstLoad" >
                <EquipeCard name="obj.name" t-foreach="state.data" t-as="obj" t-key="obj.id"/>
            </div>
            <div class="row px-4 pt-1" t-if="state.isFirstLoad" >
                <div style="color: red; text-align: center; font-size: 60px;">Nothing to Load</div>
            </div>
        </div>
    </t>
</templates>