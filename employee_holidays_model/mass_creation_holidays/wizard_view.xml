<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_holidays_creation_view_form" model="ir.ui.view">
        <field name="name">mass_holidays_creation.view.form</field>
        <field name="model">mass.holiday.creation.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="bg-white shadow p-3">
                        <div class="card bg-light my-3">
                            <div class="card-body text-center">
                                <h2 class="card-text">CREATION DE CONGE</h2>
                            </div>
                        </div>
                        <div class="card bg-light my-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="chantier_id" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="chantier_id" class="form-control" options="{'no_create': True,'no_open':True}"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="motif" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="motif" class="form-control"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="date_start" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="date_start" class="form-control" widget="daterange" options="{'related_end_date': 'date_end'}"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="date_end" class=""/><i class="fas fa-exclamation-triangle" style="color: #f00000;"></i></span>
                                            </div>
                                            <field name="date_end" class="form-control" widget="daterange" options="{'related_start_date': 'date_start'}"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><label for="duree_jours" class=""/></span>
                                            </div>
                                            <field name="duree_jours" class="form-control text-center"/>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                        </div> 
                    </div>
                    <div class="bg-white shadow p-3 my-3">
                        <div class="card bg-light my-3">
                            <div class="card-body text-center">
                                <h2 class="card-text">LISTE DES EXCLUS</h2>
                            </div>
                        </div>
                        <div class="card bg-light my-3">
                            <div class="card-body">
                                <field name="excluded_employee_ids">
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create': True,'no_open':True}"/>
                                        <field name="cin"/>
                                        <field name="job_id"/>
                                        <field name="type_emp"/>
                                        <field name="emplacement_chantier_id"/>
                                        <field name="vehicle_id"/>
                                    </tree>
                                </field>
                            </div> 
                        </div> 
                    </div>
                </sheet>
                <footer class="justify-content-center">
                    <div class="row justify-content-center w-50">
                        <div class="btn-group" role="group">
                            <button name="create_holiday" string="Confirm" type="object"
                                class="btn btn-success" />
                            <button string="Cancel" class="btn btn-danger" special="cancel" />
                        </div>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="mass_holidays_creation_action" model="ir.actions.act_window">
        <field name="name">Congé Pour Arrét de chantier</field>
        <field name="res_model">mass.holiday.creation.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mass_holidays_creation_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="mass_holidays_creation_menu"
        name="Congé saisonnier"
        action="mass_holidays_creation_action"
        groups="hr_management.group_admin_paie,hr_management.group_pointeur"
        parent="holidays_allocations_hr_menu"
        sequence="10"/>
</odoo>
